    "checkver": {
        "script": [
            "$redirectUrl = 'https://backend.remnote.com/desktop/windows'",
            "try {",
            "    Invoke-WebRequest -Uri $redirectUrl -MaximumRedirection 0 -UseBasicParsing -ErrorAction Stop",
            "}",
            "catch {",
            "    $dl_url = $_.Exception.Response.Headers.Location.AbsoluteUri",
            "}",
            "if ($dl_url -match '.*RemNote-(.+)-Setup.*') {",
            "    $ver = $matches[1]",
            "}",
            "$ver"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
