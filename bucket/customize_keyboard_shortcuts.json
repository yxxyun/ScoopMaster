{
    "version": "0.0.1",
    "description": "Custom Keyboard Shortcuts for Anki 2.1",
    "homepage": "https://ankiweb.net/shared/info/24411424",
    "license": {
        "identifier": "MIT License"
    },
    "url": "https://github.com/Liresol/anki-custom-shortcuts/archive/refs/heads/merge-main-into-dev.zip",
    "depends": [
        "extras/anki"
    ],
    "extract_dir":"anki-custom-shortcuts-merge-main-into-dev/custom_shortcuts",
    "installer": {
        "script": [
            "New-DirectoryJunction \"$(persistdir anki $global)\\data\\addons21\\$app\" $dir | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "Remove-Item -Path \"$(persistdir anki $global)\\data\\addons21\\$app\" -ErrorAction SilentlyContinue -Recurse -Force"
        ]
    }
}
