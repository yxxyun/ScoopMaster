{
    "version": "2024.7",
    "description": "Halloy is an open-source IRC client written in Rust, with the iced GUI library.",
    "homepage": "https://halloy.squidowl.org/",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/squidowl/halloy/releases/download/2024.7/halloy-installer.msi",
            "hash": "f1b535daa6f8b5534334d01abfb1df139559904f59a74cffb5552711359b2daf"
        }
    },
    "extract_dir": "PFiles/Halloy",
    "installer": {
        "script": [
            "if (!(Test-Path \"$persist_dir\\halloy.toml\")) {",
            "    $randomNumber = Get-Random -Minimum 1000 -Maximum 9999",
            "    Set-Content \"$dir\\halloy.toml\" @(@'
            # Halloy config.
            #
            # For a complete list of available options,
            # please visit https://halloy.squidowl.org/configuration/index.html

            [servers.liberachat]
            nickname = \"halloy$randomNumber\"
            server = \"irc.libera.chat\"
            channels = [\"#halloy\"]
            '@) -Encoding ASCII -Force",
            "    if (Test-Path \"$env:AppData\\halloy\") {",
            "        Copy-Item \"$env:AppData\\halloy\\*\" \"$dir\" -Recurse -Exclude '*halloy.toml' -ErrorAction SilentlyContinue",
            "    }",
            "} else { Move-Item \"$persist_dir\\*\" \"$dir\" -Include '*.toml', '*.log', '*.gz' }"
        ]
    },
    "uninstaller": {
        "script": "Move-Item \"$dir\\*\" \"$persist_dir\" -Include '*.toml', '*.log', '*.gz'"
    },
    "shortcuts": [
        [
            "halloy.exe",
            "Halloy"
        ]
    ],
    "checkver": {
        "github": "https://github.com/squidowl/halloy"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/squidowl/halloy/releases/download/$version/halloy-installer.msi"
            }
        }
    }
}
