{
    "version": "1.10.0",
    "description": "Extremely Fast Compression algorithm",
    "homepage": "https://lz4.org/",
    "license": {
        "identifier": "BSD-2-Clause,GPL-2.0-or-later",
        "url": "https://github.com/lz4/lz4/blob/dev/LICENSE"
    },
    "url": "https://github.com/lz4/lz4/archive/refs/tags/v1.10.0.zip",
    "hash": "3224b4c80f351f194984526ef396f6079bd6332dd9825c72ac0d7a37b3cdc565",
    "depends": "cmake",
    "extract_dir": "lz4-1.10.0",
    "extract_to": "source",
    "installer": {
        "script": [
            "cmake -Wno-dev -Wno-deprecated -S \"$dir\\source\\build\\cmake\" -B \"$dir\\build\" -DCMAKE_INSTALL_BINDIR=\"$dir\\bin\" -DCMAKE_INSTALL_LIBDIR=\"$dir\\lib\" -DCMAKE_INSTALL_INCLUDEDIR=\"$dir\\include\" -DCMAKE_INSTALL_MANDIR=\"$dir\\man\" | Out-Null",
            "cmake --build \"$dir\\build\" --config Release | Out-Null",
            "cmake --install \"$dir\\build\" | Out-Null",
            "Remove-Item -Recurse -Force \"$dir\\source\", \"$dir\\build\" -ErrorAction SilentlyContinue"
        ]
    },
    "env_add_path": "bin",
    "env_set": {
        "LZ4_INCLUDE_DIR": "$dir\\include",
        "LZ4_LIB_DIR": "$dir\\lib"
    },
    "checkver": {
        "github": "https://github.com/lz4/lz4"
    },
    "autoupdate": {
        "url": "https://github.com/lz4/lz4/archive/refs/tags/v$version.zip",
        "extract_dir": "lz4-$version"
    }
}
