{
    "version": "0.1.1",
    "description": "通过 Model Context Protocol 为现有 LSP 语言服务器提供桥接能力的服务端",
    "homepage": "https://github.com/isaacphi/mcp-language-server",
    "license": "BSD-3-Clause",
    "depends": [
        "main/go"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/isaacphi/mcp-language-server/archive/refs/tags/v0.1.1.zip",
            "hash": "36405d5d3d884753c7fc19d4cfdcba3ba370c3440b5da458685cef8441535f73"
        }
    },
    "pre_install": [
        "if (-not (Get-Command go -ErrorAction SilentlyContinue)) { throw 'Go (>= 1.24) is required. Install it with: scoop install main/go' }",
        "$sourceDir = Get-ChildItem -Path $dir -Directory | Where-Object { $_.Name -like 'mcp-language-server-*' } | Select-Object -First 1",
        "if (-not $sourceDir) { throw 'Failed to locate the extracted source directory.' }",
        "Push-Location $sourceDir.FullName",
        "go build -o \"$dir\\mcp-language-server.exe\"",
        "Pop-Location",
        "Remove-Item $sourceDir.FullName -Recurse -Force"
    ],
    "bin": "mcp-language-server.exe",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/isaacphi/mcp-language-server/archive/refs/tags/v$version.zip"
            }
        }
    }
}
