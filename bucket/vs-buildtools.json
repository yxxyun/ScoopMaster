{
    "version": "17.9.0",
    "description": "Visual Studio Build Tools - Standalone compiler, libraries and scripts",
    "homepage": "https://visualstudio.microsoft.com/downloads/",
    "license": "Proprietary",
    "url": "https://aka.ms/vs/17/release/vs_BuildTools.exe",
    "installer": {
        "script": [
            "Start-Process -FilePath \"$dir\\vs_BuildTools.exe\" -ArgumentList \"--wait\", \"--norestart\", \"--config $env:USERPROFILE\\scoop\\buckets\\self\\config\\vs-buildtools\\.vsconfig\" -Wait",
            
            "#配置 PowerShell 的 vs buildtools cmd （cl，link，lib等等）环境变量, 不过注意，$profile 里只能配置一个 vs 版本的环境变量，因为我的 $profile 在onedrive 能备份，主要是给没有的人用的",
            "\"Import-Module `\"C:\\\\Program Files (x86)\\\\Microsoft Visual Studio\\\\2022\\\\BuildTools\\\\Common7\\\\Tools\\\\Microsoft.VisualStudio.DevShell.dll`\"\" | Out-File -FilePath $profile -Append",
            "\"Enter-VsDevShell -InstallPath \"C:\\\\Program Files (x86)\\\\Microsoft Visual Studio\\\\2022\\\\BuildTools\" -DevCmdArguments \"-arch=x64 -host_arch=x64\" | Out-File -FilePath $profile -Append"
        ]
    }
}
