{
    "version": "11.1.31",
    "description": "酷狗音乐，就是歌多",
    "homepage": "https://www.kugou.com/",
    "license": "Proprietary",
    "url": "http://download.kugou.com/download/kugou_pc#/dl.7z",
    "hash": "a6523ca08859757b612d94a60dc36202c1038a86ed89c44fed118365bf547ffe",
    "installer": {
        "script": [
            ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
            "New-PersistDirectory \"$env:APPDATA\\KuGou8\" \"$persist_dir\\AppData\" -Migrate",
            "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\KuGou.7z\" \"$dir\"",
            "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\AppData.7z\" \"$persist_dir\\AppData\" -Overwrite",
            "Remove-Item -Recurse -Force \"$dir\\`$PLUGINSDIR\"",
            "$appversion = [System.Diagnostics.FileVersionInfo]::GetVersionInfo(\"$dir\\KuGou.exe\").FileVersion",
            "New-ItemProperty -Path 'HKCU:\\SOFTWARE\\KuGou8' -Name 'AppVersion' -Value $appversion",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\" /v \"AppDataPath\" /t REG_SZ /d \"$env:APPDATA\\Kugou8\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\" /v \"AppPath\" /t REG_SZ /d \"$dir\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\" /v \"KuGou8\" /t REG_SZ /d \"$dir\\KuGou.exe\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\" /v \"Version\" /t REG_SZ /d \"$appversion\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\\Prefetcher\" /v \"Enable\" /t REG_DWORD /d \"0\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\kugou\\Prefetcher\" /v \"LastDetectedPath\" /t REG_SZ /d \"$dir\\KuGou.exe\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\KuGou8\" /v \"AppVersion\" /t REG_SZ /d \"$appversion\" /f *>$null",
            "reg.exe add \"HKCU\\SOFTWARE\\KuGou8\" /v \"AppVersionLast\" /t REG_SZ /d \"$appversion\" /f *>$null"
        ]
    },
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App",
        "Remove-Junction \"$env:APPDATA\\KuGou8\"",
        "reg.exe delete \"HKCU\\SOFTWARE\\kugou\" /f *>$null",
        "reg.exe delete \"HKCU\\SOFTWARE\\KuGou8\" /f *>$null"
    ],
    "shortcuts": [
        [
            "KuGou.exe",
            "酷狗音乐"
        ]
    ],
    "checkver": {
        "url": "https://download.kugou.com/",
        "regex": "V (\\d+(\\.\\d+)+)"
    },
    "autoupdate": {
        "url": "http://download.kugou.com/download/kugou_pc#/dl.7z"
    }
}
