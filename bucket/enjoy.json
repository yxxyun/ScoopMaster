    "installer": {
        "script": [
            "Start-Process -FilePath \"$dir\\Enjoy-0.7.9.Setup.exe\" -ArgumentList '/silent' -Wait"
        ]
    },
    "uninstaller": {
        "script": [
            "Write-Host 'Uninstalling Enjoy...'",
            "if (Test-Path \"$env:LOCALAPPDATA\\enjoy\") {",
            "  try {",
            "    Start-Process -FilePath \"$env:LOCALAPPDATA\\enjoy\\Update.exe\" -ArgumentList '--uninstall' -Wait -ErrorAction SilentlyContinue",
            "  } catch {}",
            "  Remove-Item -Recurse -Force \"$env:LOCALAPPDATA\\enjoy\" -ErrorAction SilentlyContinue",
            "  Write-Host 'Enjoy has been removed from LocalAppData.'",
            "} else {",
            "  Write-Host 'Enjoy not found under LocalAppData.'",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Enjoy.exe",
            "Enjoy"
        ]
    ],
