{
    "version": "0.4.7-dev.4",
    "description": "A desktop AI hub application built with Tauri",
    "homepage": "https://github.com/miaotouy/aio-hub",
    "license": "MIT",
    "notes": [
        "AIO Hub 是一个基于 Tauri 的桌面 AI 工具集合",
        "用户数据目录：%LOCALAPPDATA%\\com.mty.aiohub\\",
        "本包会将该目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/miaotouy/aio-hub/releases/download/v0.4.7-dev.4/AIO.Hub_0.4.7-dev.4_x64-setup.exe#/dl.7z",
            "hash": "adc536a6778ca8d47de82e2832056ce075961ea987277ee3d2a285611d7a9d31"
        }
    },
    "pre_install": "Remove-Item \"$dir\\`$*\", \"$dir\\uninstall.exe\" -Force -Recurse -ErrorAction SilentlyContinue",
    "bin": "aiohub.exe",
    "shortcuts": [
        [
            "aiohub.exe",
            "AIO Hub"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:LOCALAPPDATA 'com.mty.aiohub'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/miaotouy/aio-hub"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/miaotouy/aio-hub/releases/download/v$version/AIO.Hub_$version_x64-setup.exe#/dl.7z"
            }
        }
    }
}
