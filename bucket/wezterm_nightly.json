{
    "version": "3715c8744def1e9bedb038e5ace1d5dfb76e8d3b",
    "description": "A GPU-accelerated cross-platform terminal emulator and multiplexer written by @wez and implemented in Rust",
    "homepage": "https://github.com/wez/wezterm",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/wezterm/wezterm/blob/main/LICENSE.md"
    },
    "notes": [
        "Add Open with Wezterm as a context menu option by running:",
        "reg import \"$dir\\install-context.reg\""
    ],
    "checkver": {
        "url": "https://api.github.com/repos/wezterm/wezterm/commits?per_page=1",
        "jsonpath": "$[0].sha"
    },
    "autoupdate": {
        "url": "https://github.com/wez/wezterm/releases/download/nightly/WezTerm-windows-nightly.zip",
        "hash": {
            "url": "$url.sha256"
        }
    },
    "url": "https://github.com/wez/wezterm/releases/download/nightly/WezTerm-windows-nightly.zip",
    "hash": "e99f20a74a25c477bc39ae9119dac3a40b090f60b83bcae1c5fde7ce5cc1279d",
    "pre_install": [
        ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
        "Set-PersistFile -Name wezterm.lua -InitType Lua"
    ],
    "installer": {
        "script": [
            "$foldername = (Get-Item $dir\\WezTerm-windows-*).Name",
            "Move-Item $dir\\$foldername\\* $dir",
            "Remove-Item $dir\\$foldername"
        ]
    },
    "post_install": [
        "$weztermPath = \"$dir\\wezterm-gui.exe\".Replace('\\', '\\\\')",
        "'install-context', 'uninstall-context' | ForEach-Object {",
        "    if (Test-Path \"$bucketsdir\\doge\\scripts\\$app\\$_.reg\") {",
        "        $content = Get-Content \"$bucketsdir\\doge\\scripts\\$app\\$_.reg\"",
        "        $content = $content.Replace('$weztermPath', $weztermPath)",
        "        if ($global) { $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE') }",
        "        Set-Content \"$dir\\$_.reg\" $content -Encoding Ascii -Force",
        "    }",
        "}"
    ],
    "bin": [
        [
            "wezterm.exe",
            "wezterm_nightly"
        ],
        [
            "wezterm-gui.exe",
            "wezterm-gui_nighlty"
        ]
    ],
    "persist": [
        "wezterm.lua",
        "wezterm_modules",
        "colors"
    ],
    "shortcuts": [
        [
            "wezterm-gui.exe",
            "Wezterm Nightly"
        ]
    ]
}
