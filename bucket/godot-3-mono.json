{
    "version": "3.3.2-stable",
    "description": "A feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface. Include Mono Runtime",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/godotengine/godot/releases/download/3.3.2-stable/Godot_v3.3.2-stable_mono_win64.zip",
            "hash": "sha512:10b404ede7e3e2ba275a62cc6f4fa6330c11fce5425f84c92f572b202298b46824515bc15f440d05711ccd2f77dd5c760fb8c337627e587f3ba637b835e5f388",
            "extract_dir": "Godot_v3.3.2-stable_mono_win64"
        },
        "32bit": {
            "url": "https://github.com/godotengine/godot/releases/download/3.3.2-stable/Godot_v3.3.2-stable_mono_win32.zip",
            "hash": "sha512:674a6c86739757bab1ca0652ec2182579d8ca9fa581d64a0ef1a07133cdced6f62438f4ab53b2f9519f28d939f106b95086b16cd484e83d85fba386cc24caccb",
            "extract_dir": "Godot_v3.3.2-stable_mono_win32"
        }
    },
    "pre_install": [
        "Remove-Item \"$dir\\Godot_*_console.*\"",
        "Get-Item \"$dir\\Godot_*.exe\" | Rename-Item -NewName 'godot-mono.exe'"
    ],
    "bin": "godot-mono.exe",
    "shortcuts": [
        [
            "godot-mono.exe",
            "Godot Engine 3 (Mono)"
        ]
    ],
    "checkver": {
        "script": [
            "$responseContent = (Invoke-WebRequest -Headers @{'Accept' = 'application/vnd.github+json'; 'X-Github-Api-Version' = '2022-11-28' } -Uri 'https://api.github.com/repos/godotengine/godot/releases').Content | ConvertFrom-Json",
            "$tags = $responseContent |select -Property tag_name",
            "$versionList = $tags |foreach {@{tag = $_.tag_name; ver = [System.Version]$_.tag_name.Substring(0, $_.tag_name.IndexOf('-'))}}",
            "$latest4 = ($versionList |where { $_.ver.Major -eq 3 } |sort -Property ver -Descending)[0].tag",
            "Write-Output $latest4"
        ],
        "regex": "^(.+)$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/godotengine/godot/releases/download/$version/Godot_v$version_mono_win64.zip",
                "extract_dir": "Godot_v$version_mono_win64"
            },
            "32bit": {
                "url": "https://github.com/godotengine/godot/releases/download/$version/Godot_v$version_mono_win32.zip",
                "extract_dir": "Godot_v$version_mono_win32"
            }
        },
        "hash": {
            "url": "https://github.com/godotengine/godot/releases/download/$version/SHA512-SUMS.txt"
        }
    }
}
