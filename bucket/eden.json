    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/eden-emulator/Releases/releases/download/v0.1.0/Eden-Windows-v0.1.0-mingw-amd64-clang-pgo.zip",
            "hash": "53483d6ceed001d463fd4806c88873df814f0ca1c977e373a0a3c15e2d831df1"
        },
        "arm64": {
            "url": "https://github.com/eden-emulator/Releases/releases/download/v0.1.0/Eden-Windows-v0.1.0-mingw-arm64-clang-pgo.zip",
            "hash": "a2349088151d22fbc981d0262d261a8b97b4ae288a7be39f8f88ce11ba54cd83"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\user\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\eden\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\eden\\*\" -Destination \"$persist_dir\\user\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\eden\" -Recurse",
        "   }",
        "}"
    ],
    "bin": "eden.exe",
    "shortcuts": [
        [
            "eden.exe",
            "Eden"
        ]
    ],
    "persist": "user",
    "checkver": {
        "github": "https://github.com/eden-emulator/Releases/",
        "regex": "tag/(v?[0-9]+(?:\\.[0-9]+){1,2}(?:-[A-Za-z0-9.-]+)?)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/$version/Eden-Windows-$version-mingw-amd64-clang-pgo.zip"
            },
            "arm64": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/$version/Eden-Windows-$version-mingw-arm64-clang-pgo.zip"
            }
        }
    }
}
