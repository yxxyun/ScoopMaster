    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.snipaste.com/archives/Snipaste-$version-x64.zip"
            },
            "32bit": {
                "url": "https://download.snipaste.com/archives/Snipaste-$version-x86.zip"
