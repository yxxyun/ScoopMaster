{
    "version": "1.1",
    "description": "PowerToys Run Plugin for LLM Integration. Supports OpenAI, Gemini, and other providers. ",
    "homepage": "https://github.com/aqasemi/powertoys-llm",
    "license": "no license",
    "suggest": {
        "PowerToys": "powertoys"
    },
    "url": "https://github.com/aqasemi/powertoys-llm/releases/download/v1.1/LLLM.zip",
    "post_install": "New-Item -ItemType Junction -Path \"$env:LOCALAPPDATA\\Microsoft\\PowerToys\\PowerToys Run\\Plugins\\LLLM\" -Target \"$dir\\LLLM\" | Out-Null",
    "pre_uninstall": [
        "if (!(Get-Process powertoys -ErrorAction Ignore)) {",
        "  Remove-Item \"$env:LOCALAPPDATA\\Microsoft\\PowerToys\\PowerToys Run\\Plugins\\LLLM\" -ErrorAction Stop",
        "} else {",
        "  abort 'PowerToys is still running, please close it before uninstalling powertoys-llm'",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/aqasemi/powertoys-llm/releases/download/v$version/LLLM.zip"
    }
}
