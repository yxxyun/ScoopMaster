        "        else {",
        "            Remove-PortableLink -Link $sourcePath -Log:$Log",
        "        }",
        "    }",
        "}",
        "#endregion",
        "Invoke-PortableMappings -Action Uninstall -Context @{ Dir = $dir; PersistDir = $persist_dir } -Mappings @(",
        "    @{ Label = 'roaming'; Source = 'AppData/LM Studio'; Target = \"$persist_dir/roaming\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'directory' },",
        "    @{ Label = 'local'; Source = 'LocalAppData/LM-Studio'; Target = \"$persist_dir/local\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'directory' },",
        "    @{ Label = 'updater'; Source = 'LocalAppData/lm-studio-updater'; Target = \"$persist_dir/local/lm-studio-updater\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'file' }",
        ") -Log:$true"
    ]
}
