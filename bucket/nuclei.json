{
    "version": "3.2.4",
    "description": "Fast and customizable vulnerability scanner based on simple YAML based DSL",
    "homepage": "https://github.com/projectdiscovery/nuclei",
    "license": "MIT",
    "architecture": {
        "32bit": {
            "url": "https://github.com/projectdiscovery/nuclei/releases/download/v3.2.4/nuclei_3.2.4_windows_386.zip",
            "hash": "d8ec716034c3ac512d608ec2fe5d1310d35db09103ee79af97e31781691067c2"
        },
        "64bit": {
            "url": "https://github.com/projectdiscovery/nuclei/releases/download/v3.2.4/nuclei_3.2.4_windows_amd64.zip",
            "hash": "d69994742ea1d1b56ecbec07da4c1c490c985c7720c6acff8b7b00f440c23a2d"
        }
    },
    "pre_install": [
        "$wsShell = New-Object -ComObject WScript.Shell",
        "$shortcut = $wsShell.CreateShortcut([System.IO.Path]::Combine($env:USERPROFILE, 'Desktop', 'nuclei.lnk'))",
        "$shortcut.TargetPath = \"cmd.exe\"",
        "$shortcut.Arguments  = \"/K cd /d $dir\"",
        "$shortcut.IconLocation  = \"$bucketsdir\\security\\icon\\nuclei.ico\"",
        "$shortcut.Save()",
    ],
    "pre_uninstall": [
        "$shortcutPath = [System.IO.Path]::Combine([System.Environment]::GetFolderPath(\"Desktop\"), \"nuclei.lnk\")",
        "if (Test-Path $shortcutPath) { Remove-Item $shortcutPath -Force }",
	],
    "bin": "nuclei.exe",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://github.com/projectdiscovery/nuclei/releases/download/v$version/nuclei_$version_windows_386.zip"
            },
            "64bit": {
                "url": "https://github.com/projectdiscovery/nuclei/releases/download/v$version/nuclei_$version_windows_amd64.zip"
            }
        }
    }
}
