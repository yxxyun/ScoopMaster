{
    "version": "7.1.2-3",
    "description": "Image::Magick - objected-oriented Perl interface to ImageMagick. Use it to read, manipulate, or write an image or image sequence from within a Perl script.",
    "homepage": "https://metacpan.org/pod/Image::Magick",
    "license": "https://imagemagick.org/script/license.php",
    "url": "https://cpan.metacpan.org/authors/id/J/JC/JCRISTY/Image-Magick-7.1.2-3.tar.gz#/Image-Magick",
    "hash": "dc6ee21aed560d36f36be608909344bd2e25d63ab5d959553401e02f5df28a6b",
    "depends": [
        "imagemagick",
        "perl"
    ],
    "installer": {
        "script": [
            "$perlCPath = ((Test-Path (appdir 'perl' $Global)) ? (appdir 'perl' $Global) : (appdir 'perl' $true)) + \"\\current\\c\\bin\"",
            "$env:PATH = \"$perlCPath;$env:PATH\"",
            "Rename-Item (Join-Path $dir $fname) (Join-Path $dir \"$fname.tar.gz\")",
            "cpanm \"$(Join-Path $dir \"$fname.tar.gz\")\" -l \"$dir\" --verbose --build-args=CC=c++",
            "Remove-Item (Join-Path $dir \"$fname.tar.gz\")",
            "$env:PATH = $env:PATH -replace \"^$($perlCPath -replace '\\\\', '\\\\');\""
        ]
    },
    "post_install": [
        "Add-Path -Path \"$dir\\lib\\perl5\" -TargetEnvVar PERL5LIB -Global:$Global",
        "$env:PERL5LIB = $(Get-EnvVar -Name PERL5LIB -Global:$Global)"
    ],
    "pre_uninstall": [
        "Remove-Path -Path \"$(currentdir $app)\\lib\\perl5\" -TargetEnvVar PERL5LIB -Global:$Global",
        "$env:PERL5LIB = $(Get-EnvVar -Name PERL5LIB -Global:$Global)"
    ]
}
