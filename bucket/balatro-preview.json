{
    "version": "4.1",
    "homepage": "https://github.com/DivvyCr/Balatro-Preview",
    "description": "A mod for the game Balatro which simulates the score and the dollars that you will get by playing the selected cards.",
    "license": {
        "identifier": "GPL-3.0",
        "url": "https://github.com/DivvyCr/Balatro-Preview/blob/main/LICENSE"
    },
    "url": "https://github.com/DivvyCr/Balatro-Preview/releases/download/v4.1/DVPreview_BMM.zip",
    "hash": "d473ad79f50780a1200e8d59535bb75503ea586ed035a063157468b420dd71ce",
    "pre_install": [
        "$modfiles = Get-ChildItem -Path $dir -Directory | Where-Object -Property Name -NotLike -Value 'DVPreview'",
        "New-Item -ItemType Directory -Name 'DVPreview' -Path $dir -Force | Out-Null",
        "$modfiles | Move-Item -Destination \"$dir\\DVPreview\""
    ],
    "post_install": [
        "if (-not (Test-Path \"$env:APPDATA\\Balatro\\Mods\")) {",
        "    New-Item -ItemType Directory -Force -Path \"$env:APPDATA\\Balatro\\Mods\" -ErrorAction Stop | Out-Null",
        "}",
        "New-Item -ItemType Junction -Path \"$env:APPDATA\\Balatro\\Mods\\DVPreview\" -Target \"$dir\\DVPreview\" | Out-Null"
    ],
    "post_uninstall": "Remove-Item -Path \"$env:APPDATA\\Balatro\\Mods\\DVPreview\" -ErrorAction SilentlyContinue | Out-Null",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/DivvyCr/Balatro-Preview/releases/download/v$version/DVPreview_BMM.zip"
    }
}
