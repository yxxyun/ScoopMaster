{
    "version": "130.0b9",
    "description": "(LibPortable patched) Developer builds of Firefox: the popular open source web browser",
    "homepage": "https://www.mozilla.org/firefox/developer/",
    "license": "MPL-2.0",
    "depends": "LibPortable",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/devedition/releases/130.0b9/win64/zh-CN/Firefox%20Setup%20130.0b9.exe#/dl.7z",
            "hash": "sha512:d0d30e95f4efdbcfc5d116f7788092f5bc70e2c7792e1285cd474783a603ac9860ee63d6afc2cfe2408b389ebfc68d1720a0c82cdaad86fe5baa3629ab60a4d7"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/devedition/releases/130.0b9/win32/zh-CN/Firefox%20Setup%20130.0b9.exe#/dl.7z",
            "hash": "sha512:82f933fbc5b8905d2eda8f8cce9b0aecfb927776353ec2f5e8818ef31aa7bd006a77b860583382bb24916bb1dcf524da05c2150ee7ba35c5cd12399eb76452b8"
        }
    },
    "extract_dir": "core",
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ]
    ],
    "pre_install": [
        "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name air) scripts/AirUtils.psm1)",
        "EnsureFile \"$persist_dir\\config.js\"",
        "$lib_dir = scoop prefix 'LibPortable'",
        "$portable_ini = \"$persist_dir\\portable.ini\"",
        "if (!(Test-Path $portable_ini)) {",
        "    $example_ini = \"$lib_dir\\portable(example).ini\"",
        "    $content = Get-Content $example_ini -replace '^Update=1$', 'Update=0' -replace '^PortableDataPath=../Profiles$', 'PortableDataPath=./profiles'",
        "    EnsureSetContent $portable_ini $content",
        "}",
        "Remove-Module -Name AirUtils"
    ],
    "persist": [
        "defaults",
        "distribution",
        "profiles",
        "config.js",
        "portable.ini"
    ],
    "post_install": [
        "Remove-Item \"$dir\\updater.exe\" -Force -ErrorAction Ignore",
        "$lib_dir = scoop prefix 'LibPortable'",
        "$arch = if ($architecture -eq '64bit') { '64' } else { '32' }",
        "$portable_dll = \"portable$arch.dll\"",
        "if (!(Test-Path \"$dir\\$portable_dll\")) {",
        "    Copy-Item \"$lib_dir\\$portable_dll\" \"$dir\" -Force",
        "}",
        "$setdll_exe = \"setdll$arch.exe\"",
        "Invoke-ExternalCommand \"$lib_dir\\$setdll_exe\" -ArgumentList @(\"/d:$dir\\$portable_dll\", \"$dir\\mozglue.dll\") -Activity \"`nApplying LibPortable patch`n\""
    ],
    "checkver": {
        "url": "https://aus5.mozilla.org/update/6/Firefox/93.0/_/WINNT_x86_64-msvc-x64/en-US/aurora/_/_/_/_/update.xml",
        "xpath": "/updates/update/patch/@URL",
        "regex": "devedition-([\\db.]+)-"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/devedition/releases/$version/win64/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/devedition/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/zh-CN/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/devedition/releases/$version/win32/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/devedition/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/zh-CN/$basename"
                }
            }
        }
    }
}
