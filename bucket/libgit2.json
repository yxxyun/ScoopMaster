{
    "version": "1.9.2",
    "description": "A cross-platform, linkable library implementation of Git that you can use in your application.",
    "homepage": "https://libgit2.org/",
    "license": {
        "identifier": "GPL-2.0-only",
        "url": "https://github.com/libgit2/libgit2/blob/main/COPYING"
    },
    "url": "https://github.com/libgit2/libgit2/archive/refs/tags/v1.9.2.zip#/dl.zip_",
    "hash": "d72b8194fa15f94ecae6bb5463900457fe6824fbe4bf6656e806d17109cc8b76",
    "depends": [
        "cmake",
        "7zip19.00-helper"
    ],
    "pre_install": [
        "Invoke-ExternalCommand 7z1900-helper -ArgumentList @('x', '-bso0', \"$dir\\dl.zip_\", \"-o$dir\") | Out-Null",
        "Rename-Item \"$dir\\libgit2-$version\" \"source\"",
        "Remove-Item \"$dir\\dl.zip_\" -Force -Recurse"
    ],
    "installer": {
        "script": [
            "cmake -Wno-dev -S \"$dir\\source\" -B \"$dir\\build\" -DUSE_SSH=exec -DUSE_HTTPS=Schannel -DBUILD_TESTS=OFF -DLIBGIT2_FILENAME=git2 -DCMAKE_INSTALL_PREFIX=\"$dir\" | Out-Null",
            "cmake --build \"$dir\\build\" --config \"Release\" | Out-Null",
            "cmake --install \"$dir\\build\"",
            "Remove-Item -Recurse -Force \"$dir\\source\", \"$dir\\build\" -ErrorAction SilentlyContinue"
        ]
    },
    "env_add_path": "bin",
    "env_set": {
        "LIBGIT2_INCLUDE_DIR": "$dir\\include",
        "LIBGIT2_LIB_DIR": "$dir\\lib"
    },
    "checkver": {
        "github": "https://github.com/libgit2/libgit2"
    },
    "autoupdate": {
        "url": "https://github.com/libgit2/libgit2/archive/refs/tags/v$version.zip#/dl.zip_"
    }
}
