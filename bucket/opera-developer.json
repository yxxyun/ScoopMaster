            "Opera"
        ]
    ],
    "checkver": {
        "url": "http://get.opera.com/ftp/pub/opera/desktop/",
        "regex": "([\\d+\\.]+)/",
        "reverse": true
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
