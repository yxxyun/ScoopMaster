        "#endregion",
        "Invoke-PortableMappings -Action Uninstall -Context @{ Dir = $dir; PersistDir = $persist_dir } -Mappings @(",
        "    @{ Label = 'roaming'; Source = 'AppData/QQ'; Target = \"$persist_dir/roaming\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'directory' },",
        "    @{ Label = 'qqex'; Source = 'AppData/QQEX'; Target = \"$persist_dir/qqex\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'directory' },",
        "    @{ Label = 'tencent-qqnt'; Source = 'AppData/Tencent/QQNT'; Target = \"$persist_dir/tencent-qqnt\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'directory' },",
        "    @{ Label = 'chat-updater'; Source = 'LocalAppData/qq-chat-updater'; Target = \"$persist_dir/updater-blocker\"; Strategy = 'symlink'; EnsureTarget = $true; TargetType = 'file' },",
