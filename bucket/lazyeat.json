    "installer": {
        "script": [
            "Start-Process msiexec -ArgumentList '/i', \"`\"$dir\\$fname`\"\", '/qn', 'INSTALLDIR=\"$dir\"' -Wait -NoNewWindow",
            "Remove-Item \"$dir\\$fname\" -Force"
        ]
    },
    "uninstaller": {
        "script": [
            "$productCode = Get-WmiObject -Class Win32_Product | Where-Object { $_.Name -like '*Lazyeat*' } | Select-Object -ExpandProperty IdentifyingNumber",
            "if ($productCode) {",
            "    Start-Process msiexec -ArgumentList '/x', $productCode, '/qn' -Wait -NoNewWindow",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Lazyeat.exe",
            "Lazyeat"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/lanxiuyun/lazyeat/releases/latest",
        "jsonpath": "$.tag_name",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/lanxiuyun/lazyeat/releases/download/v$version/Lazyeat_$version_x64_en-US.msi"
            }
        }
    }
}
