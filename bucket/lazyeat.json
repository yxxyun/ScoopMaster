  "installer": {
    "script": [
      "Start-Process msiexec -ArgumentList '/i', \"`\"$dir\\$fname`\"\", '/qn', 'INSTALLDIR=\"$dir\"' -Wait -NoNewWindow",
      "Remove-Item \"$dir\\$fname\" -Force"
    ]
  },
