{
    "##": "https://github.com/kiennq/scoop-misc/commits/master/bucket/emacs-k.json",
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "homepage": "https://github.com/kiennq/emacs-build",
    "license": "GPLv3",
    "notes": [
        "Import org-protocol by running 'regedt32 \"$dir\\org-protocol.reg\"'",
        "See: https://orgmode.org/worg/org-contrib/org-protocol.html"
    ],
    "version": "31.264.20240801.f5a490d",
    "url": "https://github.com/kiennq/emacs-build/releases/download/v31.264.20240801.f5a490d/emacs-master-x86_64-full.zip",
    "hash": "d039b5119211ee057117e67ce28bd37335ab11ec3d40bcce9f0582200c9bff78",
    "bin": [
        "bin\\runemacs.exe",
        "bin\\emacs.exe",
        "bin\\emacsclient.exe",
        "bin\\emacsclientw.exe",
        "bin\\etags.exe",
        "bin\\ctags.exe",
        "bin\\gzip.exe",
        [
            "bin\\x86_64-w64-mingw32-agrep.exe",
            "agrep"
        ],
        [
            "bin\\emacsclientw.exe",
            "emw",
            "-c -n -a \"\""
        ]
    ],
    "post_install": [
        "$quoteDir = $dir.Replace('\\', '\\\\')",
        "@\"",
        "REGEDIT4",
        "[HKEY_CLASSES_ROOT\\org-protocol]",
        "@=\"URL:Org Protocol\"",
        "\"URL Protocol\"=\"\"",
        "[HKEY_CLASSES_ROOT\\org-protocol\\shell]",
        "[HKEY_CLASSES_ROOT\\org-protocol\\shell\\open]",
        "[HKEY_CLASSES_ROOT\\org-protocol\\shell\\open\\command]",
        "@=\"\\\"$quoteDir\\\\bin\\\\emacsclientw.exe\\\" \\\"%1\\\"\"",
        "\"@ | Out-File -FilePath \"$dir\\org-protocol.reg\" -Encoding ASCII"
    ],
    "persist": "usr\\bin",
    "checkver": {
        "github": "https://github.com/kiennq/emacs-build",
        "re": "/tag/v([\\d\\w.-]+)"
    },
    "autoupdate": {
        "url": "https://github.com/kiennq/emacs-build/releases/download/v$version/emacs-master-x86_64-full.zip"
    },
    "shortcuts": [
        [
            "bin\\runemacs.exe",
            "Emacs"
        ],
        [
            "bin\\emacsclientw.exe",
            "Emacs Client",
            "-c -n -a \"\""
        ]
    ]
}
