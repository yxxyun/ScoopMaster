{
    "version": "0.4.1",
    "description": "Minimalist terminal app that just works",
    "homepage": "https://github.com/Ideademic/nanoprompt",
    "license": "BSD-3-Clause",
    "architecture": {
        "64bit": {
            "url": "https://github.com/Ideademic/nanoprompt/releases/download/0.4.1/nanoprompt_0.4.1_x64-setup.exe"
        }
    },
    "installer": {
        "script": [
            "Start-Process \"$dir\\$fname\" -ArgumentList '/S', '/CURRENTUSER', \"/D=$dir\" -Wait"
        ]
    },
    "uninstaller": {
        "script": [
            "Start-Process \"$dir\\Uninstall nanoprompt.exe\" -ArgumentList '/S' -Wait"
        ]
    },
    "shortcuts": [
        ["nanoprompt.exe", "nanoprompt"]
    ],
    "checkver": {
        "github": "https://github.com/Ideademic/nanoprompt"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Ideademic/nanoprompt/releases/download/$version/nanoprompt_$version_x64-setup.exe"
            }
        }
    }
}
