{
    "version": "2.2.6",
    "description": "开发环境清理工具 - 检测已安装工具、管理包、清理缓存、监控服务等",
    "homepage": "https://github.com/cocojojo5213/Dev-Janitor",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/cocojojo5213/Dev-Janitor/releases/download/v2.2.6/Dev-Janitor_2.2.6_x64_portable.zip",
            "hash": "b13dcddc79db2cb2e35f0dc62bcdcf4304f6ea63c0b0cede0aa1f81035d80ac1"
        }
    },
    "shortcuts": [
        [
            "dev-janitor-v2.exe",
            "Dev Janitor"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:LOCALAPPDATA 'dev.janitor.app'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    Move-Item -LiteralPath $source -Destination $backup -Force",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cocojojo5213/Dev-Janitor/releases/download/v$version/Dev-Janitor_$version_x64_portable.zip"
            }
        }
    }
}
