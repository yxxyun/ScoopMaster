{
    "version": "2123.3-A",
    "description": "A fork of the Azahar 3DS emulator that restores some features.",
    "homepage": "https://github.com/AzaharPlus/AzaharPlus",
    "license": {
        "identifier": "GPL-2.0-or-later",
        "url": "https://github.com/AzaharPlus/AzaharPlus/blob/AzaharPlus/license.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/AzaharPlus/AzaharPlus/releases/download/AZAHAR_PLUS_2123_3_A/azaharplus-2123.3-A-windows.zip",
            "hash": "8e8bbc81482038b7267fa65af0eb9f66b492c3ea6c7d9263b4eab28b5fd05ed9"
        }
    },
    "extract_dir": "azaharplus-2123.3-A-windows",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\user\")) {",
        "   New-Item -Path \"$persist_dir\" -Name \"user\" -ItemType \"directory\" | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\Citra\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\Citra\\*\" -Destination \"$persist_dir\\user\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\Citra\" -Recurse",
        "   }",
        "}"
    ],
    "bin": "azahar.exe",
    "shortcuts": [
        [
            "azahar.exe",
            "AzaharPlus"
        ]
    ],
    "persist": "user",
    "checkver": {
        "github": "https://github.com/AzaharPlus/AzaharPlus"
    },
    "autoupdate": {
        "url": "https://github.com/AzaharPlus/AzaharPlus/releases/download/$version/azaharplus-$version-windows.zip",
        "extract_dir": "azaharplus-$version-windows"
    }
}
