{
    "##": ["TODO:ChuckieChen945_Tangyuan/postgresql-customized"],
    "version": "2026.02.03.078cf12",
    "description": "odoo 带自定义设置",
    "license": "Unknown",

    "depends": ["versions/python312", "main/uv"],
    "url": "https://github.com/odoo/odoo/archive/refs/heads/19.0.zip",
    "hash": [
        "2b15e5bcd5260eb302f55cd4cd196719d20533114fd6cc9403bb9e235205a1b6"
    ],
    "extract_dir": ["odoo-19.0"],
    "pre_install": [
        "New-Item -Path $dir -Name 'odoo.conf' -ItemType 'file'",
        "Set-Content -Path (Join-Path $dir '.python-version') -Value '3.12'"
    ],
    "installer": {
        "script": [
            "Push-Location $dir",
            "",
            "try {",
            "    uv venv",
            "    uv pip install -r requirements.txt",
            "}",
            "finally {",
            "    Pop-Location",
            "}"
        ]
    },
    "bin": ["odoo-bin"],
    "persist": "odoo.conf",
    "checkver": {
        "url": "https://github.com/odoo/odoo/commits/19.0.atom",
        "regex": "(?s)>(\\d+)-(\\d+)-(\\d+)T.*?/(?<sha>(?<short>[0-9a-f]{7})[0-9a-f]{33})",
        "replace": "${1}.${2}.${3}.${short}"
    },
    "autoupdate": {
        "url": "https://github.com/odoo/odoo/archive/refs/heads/19.0.zip"
    }
}
