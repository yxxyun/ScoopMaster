    },
    "autoupdate": {
        "url": "https://cdn.aliyundrive.net/downloads/apps/desktop/aDrive-$version.exe#/aDrive-$version.7z",
        "hash": {
            "url": "https://g.alicdn.com/aliyun-drive-fe/aliyun-drive-desktop-version/$version/win32/x64/latest.yml",
            "mode": "extract",
            "regex": "sha512: $base64"
        }
    }
