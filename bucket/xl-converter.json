{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "version": "1.2.3",
    "description": "Easy-to-use image converter for modern formats. Supports multithreading, drag 'n drop, and downscaling.",
    "homepage": "https://codepoems.eu/xl-converter/",
    "license": "GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/JacobDev1/xl-converter/releases/download/v1.2.3/xl-converter-win-1.2.3-x86_64-portable.7z",
            "hash": "a3be46d277b87ef56f10b151cd530077e81b47620d84c5f9edbde1b1015c6b47",
            "extract_dir": "xl-converter-win-1.2.3-x86_64-portable"
        }
    },
    "bin": "xl-converter.exe",
    "shortcuts": [
        [
            "xl-converter.exe",
            "XL Converter"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\_internal\\user_data\")) {",
        "    New-Item -ItemType Directory \"$dir\\_internal\\user_data\" | Out-Null",
        "    if (Test-Path \"$env:LOCALAPPDATA\\xl-converter\") {",
        "        Write-Host ''",
        "        info 'Copying existing user_data from ''%LOCALAPPDATA%\\xl-converter'''",
        "        Get-ChildItem \"$env:LOCALAPPDATA\\xl-converter\\\" | Copy-Item -Destination \"$dir\\_internal\\user_data\"",
        "    }",
        "    Write-Host 'pre_install script ' -NoNewline",
        "}"
    ],
    "persist": [
        "_internal\\user_data"
    ],
    "checkver": {
        "github": "https://github.com/JacobDev1/xl-converter"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/JacobDev1/xl-converter/releases/download/v$version/xl-converter-win-$version-x86_64-portable.7z",
                "extract_dir": "xl-converter-win-$version-x86_64-portable"
            }
        }
    }
}
