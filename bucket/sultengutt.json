{
    "version": "0.1.0",
    "description": "Remember to buy Suprise Dinner",
    "homepage": "https://github.com/TobiasKrok/sultengutt",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/TobiasKrok/sultengutt/releases/download/v0.1.0/sultengutt-windows-amd64.zip",
            "hash": "PLACEHOLDER_SHA256"
        }
    },
    "bin": "sultengutt.exe",
    "checkver": {
        "github": "https://github.com/TobiasKrok/sultengutt"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/TobiasKrok/sultengutt/releases/download/v$version/sultengutt-windows-amd64.zip"
            }
        }
    },
    "pre_uninstall": [
        "& \"$dir\\sultengutt.exe\" uninstall --confirm 2>$null | Out-Null"
    ],
    "post_install": [
        "Write-Host 'To set up Sultengutt, run:' -ForegroundColor Green",
        "Write-Host '  sultengutt install' -ForegroundColor White",
        "Write-Host ''",
        "Write-Host 'To reinstall or change Sultengutt, run:' -ForegroundColor Green",
        "Write-Host '  sultengutt install' -ForegroundColor White",
        "Write-Host ''",
        "Write-Host 'To check status:' -ForegroundColor Green", 
        "Write-Host '  sultengutt status' -ForegroundColor White",
        "Write-Host ''",
        "Write-Host 'To pause/resume reminders:' -ForegroundColor Green",
        "Write-Host '  sultengutt pause' -ForegroundColor White",
        "Write-Host '  sultengutt resume' -ForegroundColor White"
    ],
    "notes": "Sultengutt requires initial setup. Run 'sultengutt install' after installation."
}
