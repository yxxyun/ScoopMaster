    "post_install": [
        "if (Test-Path \"$persist_dir\\config.ini\") {",
        "    Copy-Item \"$persist_dir\\config.ini\" \"$dir\"",
        "}",
        "else {",
        "    New-Item \"$persist_dir\\config.ini\" -ItemType File | Out-Null",
        "    Set-Content -Path \"$persist_dir\\config.ini\" -Value \"EnableConsole = false
