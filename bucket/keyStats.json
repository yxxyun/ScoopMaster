{
    "version": "1.31",
    "description": "Keyboard & Mouse Stats for Windows - track your typing and clicking statistics",
    "homepage": "https://github.com/debugtheworldbot/keyStats",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/debugtheworldbot/keyStats/releases/download/v1.31/KeyStats-Windows-1.31-NetFramework48.zip",
            "hash": "71f168f12cc21e2680eaf79684934e5e98cb03b1a1a5e10af7794a5e07d5226e"
        }
    },
    "bin": "KeyStats.exe",
    "shortcuts": [
        [
            "KeyStats.exe",
            "KeyStats"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:LOCALAPPDATA 'KeyStats'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/debugtheworldbot/keyStats"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/debugtheworldbot/keyStats/releases/download/v$version/KeyStats-Windows-$version-NetFramework48.zip"
            }
        }
    }
}
