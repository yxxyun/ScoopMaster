{
    "version": "6.3.2.0",
    "description": "滴答清单，一款轻便的待办事项 (Todo)、日程管理 (GTD) 应用。Dida is a powerful to-do & task management app.",
    "homepage": "https://www.dida365.com/",
    "license": "Freemium",
    "architecture": {
        "64bit": {
            "url": "https://cdn.dida365.cn/download/win64/dida_win_setup_release_x64_6320.exe",
            "hash": "635a6c3afa68dabef8e0d3461c1b8c289c5d4bf3a786a866d19d603015a86588"
        },
        "32bit": {
            "url": "https://cdn.dida365.cn/download/win/dida_win_setup_release_x86_6320.exe",
            "hash": "66257d070e4e371c6c6b66c2763c682af71ec3648a2b8bdc461a1f05955c7eaa"
        }
    },
    "innosetup": true,
    "shortcuts": [
        [
            "TickTick.exe",
            "滴答清单"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreInstall"
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostInstall",
        "$LinkPaths = @(\"$env:AppData\\Tick_Tick\")",
        "A-New-LinkDirectory $LinkPaths"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreUninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostUninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Appest.Dida' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "32bit": {
                "url": "$matchX86",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x86_machine.InstallerSha256"
                }
            }
        }
    }
}
