{
    "version": "2.0.1",
    "description": "一个 AI 助手。An AI assistant.",
    "homepage": "https://www.kimi.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://kimi.moonshot.cn/user/agreement/modeluse"
    },
    "architecture": {
        "64bit": {
            "url": "https://kimi-img.moonshot.cn/app/download/windows/2.0.1_kimi_setup_2.0.1.exe",
            "hash": "a746c30c19945a9718a6370fed72007f61c0f42d41afaa4df0910f7a9c650a9c"
        }
    },
    "innosetup": true,
    "shortcuts": [
        [
            "Kimi 智能助手.exe",
            "Kimi 智能助手"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreInstall"
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostInstall",
        "$LinkPaths = @(\"$env:AppData\\kimi\", \"$env:LocalAppData\\KimiAppCache\")",
        "A-New-LinkDirectory $LinkPaths"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreUninstall",
        "A-Stop-Process",
        "A-Remove-Link"
    ],
    "post_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostUninstall"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'MoonshotAI.Kimi' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_user.InstallerUrl);\"",
            "\"x86:$($InstallerInfo.x86_user.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_user.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>[^;]+)(?:; x64:(?<x64>[^;]*))?(?:; x86:(?<x86>[^;]*))?(?:; arm64:(?<arm64>[^;]*))?"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_user.InstallerSha256"
                }
            }
        }
    }
}
