    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://download.blender.org/release/Blender4.5/blender-4.5.4-windows-x64.zip",
            "hash": "0de55df1d99e4e7152605022cb648e795d5d49209c5c5c4889e1a19fb401a054",
            "extract_dir": "blender-4.5.4-windows-x64"
        }
    },
    "bin": [
        [
            "blender.exe",
            "blender-lts"
        ]
    ],
    "shortcuts": [
        [
            "blender.exe",
            "Blender LTS"
        ]
    ],
    "persist": "portable",
    "checkver": {
        "url": "https://download.blender.org/release/Blender4.5/",
        "regex": "blender-([\\w.]+)-windows-x64\\.zip",
        "script": [
            "try {",
            "   $versionRegex = [regex]'<a\\s+[^>]*?href=\"([^\"]+)\"[^>]*?>(?<FileName>blender-(?<Version>\\d+\\.\\d+\\.\\d+)-windows-x64\\.zip)</a>'",
            "   $expectedVersion = [version]$expected_ver",
            "   $versionRegex.Matches($page) | ForEach-Object {",
            "       [PSCustomObject]@{",
            "           FileName = $_.Groups['FileName'].Value",
            "           Version = [version]$_.Groups['Version'].Value",
            "       }",
            "   } | Where-Object { $_.Version -ge $expectedVersion} | Sort-Object -Property Version -Descending | Join-String -Property FileName -Separator \"`r`n\"",
            "} catch {",
            "   Write-Error \"$app checkver failed: $($_.Exception.Message)\"",
            "}"
        ]
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.blender.org/release/Blender$majorVersion.$minorVersion/blender-$version-windows-x64.zip",
                "extract_dir": "blender-$version-windows-x64"
            }
        },
        "hash": {
            "url": "$baseurl/blender-$version.sha256"
        }
    }
}
