{
    "version": "4.23.8",
    "description": " Datovka je multiplatformní desktopová aplikace pro přístup k datovým schránkám a k trvalému uchovávání datových zpráv v lokální databázi. ",
    "license": "GPL-3",
    "homepage": "https://www.datovka.cz/",
    "architecture": {
        "64bit": {
            "url": "https://secure.nic.cz/files/datove_schranky/4.23.8/datovka-portable-4.23.8-windows-x64.zip",
            "hash": "16044406bde4502495a5d9934537e30447af30b667f0e49cdb48a89a5b30b1e5"
        },
        "32bit": {
            "url": "https://secure.nic.cz/files/datove_schranky/4.23.8/datovka-portable-4.23.8-windows-x86.zip",
            "hash": "f913a29ebded663cbec46610f6f6c9d13048b3aef671727bc8b3f9f58d0ea4ce"
        }
    },
    "extract_dir": "datovka-4.23.8-portable",
    "shortcuts": [
        [
            "datovka-portable.exe",
            "Datovka"
        ]
    ],
    "persist": ".dsgui",
    "checkver": {
        "url": "https://www.datovka.cz/cs/pages/instalace.html",
        "regex": "Instalační balíčky verze\\s(\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "extract_dir": "datovka-$version-portable",
        "architecture": {
            "64bit": {
                "url": "https://secure.nic.cz/files/datove_schranky/$version/datovka-portable-$version-windows-x64.zip"
            },
            "32bit": {
                "url": "https://secure.nic.cz/files/datove_schranky/$version/datovka-portable-$version-windows-x86.zip"
            }
        }
    },
    "post_install": [
        "echo 'Disabling in-app updates'; Set-ItemProperty -Path \"HKCU:\\Software\\CZ.NIC\\Datovka\" -Name \"DisableVersionNotification\" -Value 1"
    ],
    "post_uninstall":[
        "Remove-ItemProperty -Path \"HKCU:\\Software\\CZ.NIC\\Datovka\" -Name \"DisableVersionNotification\""
    ]
}
