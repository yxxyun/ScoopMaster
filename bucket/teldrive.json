{
    "version": "1.6.13-6f64009",
    "description": "Teldrive is a powerful utility that enables you to organise your telegram files and much more",
    "homepage": "https://codeberg.org/teldrive/teldrive",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://codeberg.org/teldrive/teldrive/releases/download/1.6.13/teldrive-1.6.13-windows-amd64.zip",
            "hash": "418793e66c8cda58cf33d1da827e7fefb66d4988477d90f446701f8277e502ff"
        },
        "arm64": {
            "url": "https://codeberg.org/teldrive/teldrive/releases/download/1.6.13/teldrive-1.6.13-windows-arm64.zip",
            "hash": "035a8c5a50985c63f2f50476b652694a7a8f8d4b3e13bf09689a8a86cfda513a"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\storage.db\")) { New-Item \"$dir\\storage.db\" | Out-Null }",
        "if (!(Test-Path \"$persist_dir\\config.toml\")) { New-Item \"$dir\\config.toml\" | Out-Null }"
    ],
    "bin": "teldrive.exe",
    "persist": [
        "storage.db",
        "config.toml"
    ],
    "checkver": {
        "script": [
            "$url = 'https://codeberg.org/api/v1/repos/teldrive/teldrive/tags'",
            "$tags = (Invoke-RestMethod -UseBasicParsing -Uri $url)",
            "$latest = $tags | Where-Object { $_.name -match '^\\d+\\.\\d+\\.\\d+$' } | Sort-Object { [version]$_.name } -Descending | Select-Object -First 1",
            "$version = $latest.name",
            "$commit = $latest.id.Substring(0, 7)",
            "Write-Output ('version:\"' + $version + '\" commit:\"' + $commit + '\"')"
        ],
        "regex": "version:\"(?<version>[^\"]+)\" commit:\"(?<commit>[^\"]+)\"",
        "replace": "${version}-${commit}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://codeberg.org/teldrive/teldrive/releases/download/$matchHead/teldrive-$matchHead-windows-amd64.zip"
            },
            "arm64": {
                "url": "https://codeberg.org/teldrive/teldrive/releases/download/$matchHead/teldrive-$matchHead-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$baseurl/teldrive_checksums.txt"
        }
    }
}
