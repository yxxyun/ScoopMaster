{
    "version": "0.0.1",
    "description": "VSCode with persional extensions",
    "homepage": "https://example.com/",
    "license": "Freeware",
    "url": "https://github.com/ChuckieChen945/vscode-markdown-one-dark/releases/download/v0.0.1/vscode-markdown-one-dark.vsix",
    "hash": "4e3d022efbc14a037f087b7ba25e59fc1c7a309a0f61c768304910962d9954fb",
    "depends": ["extras/vscode"],
    "installer": {
        "script": [
            "$extensions = @(",
            "############### vscode ################",
            "'ms-vscode-remote.remote-containers',",
            "'ms-vscode-remote.remote-wsl',",
            "'ms-azuretools.vscode-containers',",
            "'ms-ceintl.vscode-language-pack-zh-hans',",
            "'zhuangtongfa.material-theme',",
            "'shardulm94.trailing-spaces',",
            "'vscodevim.vim',",
            "'pkief.material-icon-theme',",
            "'EditorConfig.EditorConfig',",
            "############### display ################",
            "'aaron-bond.better-comments',",
            "'naumovs.color-highlight',",
            "'kisstkondoros.vscode-gutter-preview',",
            "'medo64.highlight-ip',",
            "'medo64.render-crlf',",
            "'jgclark.vscode-todo-highlight',",
            "############### python ################",
            "'ms-python.python',",
            "'ms-python.debugpy',",
            "'ms-python.vscode-pylance',",
            "'ms-python.vscode-python-envs',",
            "#--------",
            "'charliermarsh.ruff',",
            "'njpwerner.autodocstring',",
            "############### other languages ################",
            "'ms-vscode.powershell',",
            "'tommasov.hosts',",
            "'yzhang.markdown-all-in-one',",
            "'davidanson.vscode-markdownlint',",
            "'xlthu.pangu-markdown',",
            "'mechatroner.rainbow-csv',",
            "'ecmel.vscode-html-css',",
            "'redhat.vscode-yaml',",
            "'tamasfe.even-better-toml',",
            "'GitHub.vscode-github-actions',",
            "'sanjulaganepola.github-local-actions',",
            "'foxundermoon.shell-format',",
            "'ionutvmi.reg',",
            "'redhat.vscode-xml',",
            "'inferrinizzard.prettier-sql-vscode',",
            "'animallogic.vscode-usda-syntax',",
            "'saviof.mayacode',",
            "############### others ################",
            "'esbenp.prettier-vscode',",
            "'buuug7.gbk2utf8',",
            "'chanhx.crabviz',",
            "############### ai ################",
            "'github.copilot',",
            "'github.copilot-chat',",
            "'GitHub.vscode-pull-request-github'",
            ")",
            "foreach ($extension in $extensions) {",
            "    code --install-extension $extension",
            "}",
            "code --install-extension \"$dir\\vscode-markdown-one-dark.vsix\""
        ]
    },
    "post_install": [
        "reg import \"$(appdir extras/vscode $global)\\current\\install-context.reg\"",
        "reg import \"$(appdir extras/vscode $global)\\current\\install-associations.reg\"",
        "reg import \"$(appdir extras/vscode $global)\\current\\install-github-integration.reg\""
    ],
    "pre_uninstall": [
        "reg import \"$(appdir extras/vscode $global)\\current\\uninstall-context.reg\"",
        "reg import \"$(appdir extras/vscode $global)\\current\\uninstall-associations.reg\"",
        "reg import \"$(appdir extras/vscode $global)\\current\\uninstall-github-integration.reg\""
    ],
    "uninstaller": {
        "script": ["scoop uninstall extras/vscode"]
    },
    "##": [
        "采用自定义extension package的效果不好，不再使用extension package",
        "改为在installer中逐个安装"
    ]
}
