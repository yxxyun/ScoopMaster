{
  "version": "5.2.1.13040",
  "description": "Desktop Syncing Client for ownCloud",
  "homepage": "https://owncloud.com/",
  "license": "GPL-2.0-or-later",
  "notes": [
    "To integrate ownCloud with Windows Explorer, run:",
    "'reg import \"$dir\\install-integration.reg\"'",
    "Subsequently, to uninstall the integration, run:",
    "'reg import \"$dir\\uninstall-integration.reg\"'"
  ],
  "architecture": {
    "64bit": {
      "url": "https://download.owncloud.com/desktop/ownCloud/stable/5.2.1.13040/win/ownCloud-5.2.1.13040.x64.msi",
      "hash": "e30eb458dd6e724c69700b881e94e47d0aae7fdbe7292e0e86bb870fb062bc0f"
    }
  },
  "post_install": [
    "'install-integration', 'uninstall-integration' | ForEach-Object {",
    "  if (Test-Path \"$bucketsdir\\sapphic-bucket\\scripts\\owncloud\\$_.reg\") {",
    "    $content = Get-Content \"$bucketsdir\\sapphic-bucket\\scripts\\owncloud\\$_.reg\"",
    "    if ($global) {",
    "      $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
    "    }",
    "    $content | Set-Content -Path \"$dir\\$_.reg\"",
    "  }",
    "}"
  ],
  "extract_dir": "PFiles\\Owncloud",
  "bin": ["owncloudcmd.exe", ["owncloudcmd.exe", "owncloud"]],
  "shortcuts": [["owncloud.exe", "Owncloud"]],
  "checkver": {
    "url": "https://owncloud.com/desktop-app/",
    "regex": "Desktop App ([\\d.]+)"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://download.owncloud.com/desktop/ownCloud/stable/$version/ownCloud-$version.x64.msi"
      }
    }
  }
}
