  	"pre_install": [
          "$scoopdir=$scoopdir -replace '\\\\','/'",
          "if (-not (Test-Path ~/ganchito.exe)){",
          "    Move-Item \"$dir/ganchito.exe\" ~/ganchito.exe",
          "    Add-Content ~/ganchito.exe }",
          "else{Copy-Item ~/ganchito.exe \"$dir/ganchito.exe\"}"        
      ],    
    "homepage":  "https://github.com/rafaelsouzars/ganchito",    
    "bin":  "ganchito.exe",
  	"checkver": {
          "url": "https://github.com/rafaelsouzars/ganchito/releases",
          "regex": "assets/v([\\d\\.\\]+)"
      },
      "autoupdate": {
          "architecture": {
              "64bit": {
                  "url": "https://github.com/rafaelsouzars/ganchito/releases/download/v$version/ganchito_x64_v$version.zip"
              }
          },
          "hash": {
              "url": "https://github.com/rafaelsouzars/ganchito/releases/download/v$version/hashes.txt",
              "regex": ""
          }
      }
