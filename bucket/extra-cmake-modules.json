{
    "version": "6.22.0",
    "description": "Extra modules and scripts for CMake.",
    "homepage": "https://github.com/KDE/extra-cmake-modules",
    "license": {
        "identifier": "BSD-3-Clause",
        "url": "https://github.com/KDE/extra-cmake-modules/blob/master/COPYING-CMAKE-SCRIPTS"
    },
    "url": "https://github.com/KDE/extra-cmake-modules/archive/refs/tags/v6.22.0.zip",
    "hash": "f2784973452f379f9a27077c6ae275a3a5714fb1a94519f606c76e8f3cc9da2c",
    "depends": "cmake",
    "extract_dir": "extra-cmake-modules-6.22.0",
    "extract_to": "source",
    "installer": {
        "script": [
            "cmake -Wno-dev -Wno-deprecated -S \"$dir\\source\" -B \"$dir\\build\" -DCMAKE_INSTALL_PREFIX=\"$dir\" | Out-Null",
            "cmake --build \"$dir\\build\" --config Release | Out-Null",
            "cmake --install \"$dir\\build\" | Out-Null",
            "Remove-Item -Recurse -Force \"$dir\\source\", \"$dir\\build\" -ErrorAction SilentlyContinue"
        ]
    },
    "env_set": {
        "ECM_DIR": "$dir"
    },
    "checkver": {
        "url": "https://github.com/KDE/extra-cmake-modules/tags",
        "regex": "/releases/tag/(?:v|V)?([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/KDE/extra-cmake-modules/archive/refs/tags/v$version.zip",
        "extract_dir": "extra-cmake-modules-$version"
    }
}
