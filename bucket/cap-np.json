    "shortcuts": [
        [
            "Cap.exe",
            "Cap"
        ]
    ],
    "post_install": [
        "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\setup.exe\" -Wait -Verb 'RunAs' -WindowStyle 'Hidden' -ArgumentList @('in', '-c', '--am', '--al', '-t', \"$dir\")",
        "Remove-Item \"$dir\\setup.exe\", \"$dir\\vcredist_2010_x64.exe\""
    ],
    "pre_uninstall": [
        "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\Uninstall.exe\" -Wait -Verb 'RunAs' -WindowStyle 'Hidden' -ArgumentList @('pr', '-c', '--am', '--al')",
        "Start-Sleep -Seconds 2"
    ],
    "checkver": {
        "script": [
            "try { $detail = Invoke-WebRequest 'https://cap.so/download/windows' -MaximumRedirection 0 -ErrorAction Ignore } catch { $_.Exception.Response }",
            "return $detail.Headers.Location"
        ],
        "regex": "https://(?<partialurl>.*)/Cap_([\\d.]+?)_x64-setup.exe"
    },
    "autoupdate": {
        "url": "https://cap.so/download/windows"
    }
}
