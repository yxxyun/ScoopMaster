    },
    "architecture": {
        "64bit": {
            "url": "https://desktop-release.notion-static.com/Notion%20Setup%207.3.4.exe#/dl.7z",
            "hash": "sha512:d07a50d94a9daa896b6add31fc7752d936bc22975729c2406b67b8c2abc4468375f6b4c32dafcfcf13fbb75b2319011f2053e449c2a76d4e2666758dad544dc1",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\" -Recurse"
            ]
        }
