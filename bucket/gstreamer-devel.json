            }
        },
        "hash": {
            "url": "$url.sha256sum"
        }
    },
    "pre_install": [
        "if ($architecture -eq \"64bit\") { Move-Item -Path $dir/PFiles64/gstreamer/1.0/msvc_x86_64/* $dir  } elseif ($architecture -eq \"32bit\") { Move-Item -Path $dir/mingw_x86/* $dir }",
