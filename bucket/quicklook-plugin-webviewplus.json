{
    "version": "1.6.4",
    "description": "QuickLook plugin for previewing various file types with WebViewPlus",
    "homepage": "https://github.com/mooflu/QuickLook.Plugin.WebViewPlus",
    "license": "MIT",
    "depends": "extras/quicklook",
    "url": "https://github.com/mooflu/QuickLook.Plugin.WebViewPlus/releases/download/1.6.4/QuickLook.Plugin.WebViewPlus.qlplugin#/dl.zip",
    "hash": "cbc2e7a35edff274e0effe073a6a1c843ee11a320dd509cb1c3bc44c602c602e",
    "pre_install": [
        "if (Get-Process QuickLook -ErrorAction SilentlyContinue) {error 'This package requires QuickLook to not be running.'; break}",
        "",
        "$plugindir = (New-Item -Path \"$scoopdir\\persist\\quicklook\\UserData\\QuickLook.Plugin\" -ItemType Directory -Force).FullName",
        "",
        "Remove-Item -Path \"$plugindir\\QuickLook.Plugin.WebViewPlus\" -Force -Recurse -ErrorAction SilentlyContinue",
        "New-Item -Path \"$plugindir\\QuickLook.Plugin.WebViewPlus\" -Target \"$dir\" -ItemType SymbolicLink | Out-Null"
    ],
    "pre_uninstall": [
        "if (Get-Process QuickLook -ErrorAction SilentlyContinue) {error 'This package requires QuickLook to not be running.'; break}",
        "",
        "$plugindir = (New-Item -Path \"$scoopdir\\persist\\quicklook\\UserData\\QuickLook.Plugin\" -ItemType Directory -Force).FullName",
        "",
        "Remove-Item -Path \"$plugindir\\QuickLook.Plugin.WebViewPlus\" -Force -Recurse"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/mooflu/QuickLook.Plugin.WebViewPlus/releases/download/$version/QuickLook.Plugin.WebViewPlus.qlplugin#/dl.zip"
    }
}
