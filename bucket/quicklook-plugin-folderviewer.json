{
    "version": "1.3",
    "description": "Folder viewer plugin for QuickLook",
    "homepage": "https://github.com/adyanth/QuickLook.Plugin.FolderViewer",
    "license": "MIT",
    "depends": "extras/quicklook",
    "url": "https://github.com/adyanth/QuickLook.Plugin.FolderViewer/releases/download/1.3/QuickLook.Plugin.FolderViewer.qlplugin/#dl.zip",
    "hash": "493305ca9ebd5a4a0ab1c7e19ef7d72376998cd5d14533f3d679079c14a2f7c3",
    "pre_install": [
        "if (Get-Process QuickLook -ErrorAction SilentlyContinue) {error 'This package requires QuickLook to not be running.'; break}",
        "",
        "$plugindir = (New-Item -Path \"$scoopdir\\persist\\quicklook\\UserData\\QuickLook.Plugin\" -ItemType Directory -Force).FullName",
        "",
        "Remove-Item -Path \"$plugindir\\QuickLook.Plugin.FolderViewer\" -Force -Recurse -ErrorAction SilentlyContinue",
        "New-Item -Path \"$plugindir\\QuickLook.Plugin.FolderViewer\" -Target \"$dir\" -ItemType SymbolicLink | Out-Null"
    ],
    "pre_uninstall": [
        "if (Get-Process QuickLook -ErrorAction SilentlyContinue) {error 'This package requires QuickLook to not be running.'; break}",
        "",
        "$plugindir = (New-Item -Path \"$scoopdir\\persist\\quicklook\\UserData\\QuickLook.Plugin\" -ItemType Directory -Force).FullName",
        "",
        "Remove-Item -Path \"$plugindir\\QuickLook.Plugin.FolderViewer\" -Force -Recurse"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/adyanth/QuickLook.Plugin.FolderViewer/releases/download/$version/QuickLook.Plugin.FolderViewer.qlplugin/#dl.zip"
    }
}
