{
    "version": "5.3.0",
    "description": "A cross-platform context-aware key remapper.",
    "homepage": "https://github.com/houmain/keymapper",
    "license": "GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/houmain/keymapper/releases/download/5.3.0/keymapper-5.3.0-Windows-x86_64.zip",
            "hash": "91699d870cb086450c72573ac2fa694cd062faa94350ddbc72f771358e0d2fe1",
            "extract_dir": "keymapper-5.3.0-Windows-x86_64"
        }
    },
    "post_install": [
        "if ($bucket) {",
        "    $scriptsdir = \"$bucketsdir\\$bucket\\scripts\"",
        "} else {",
        "    $scriptsdir = \"$(Split-Path $(Split-Path $url -Parent) -Parent)\\scripts\"",
        "}",
        "'install-task.ps1', 'uninstall-task.ps1' | ForEach-Object {",
        "    $content = (Get-Content \"$scriptsdir\\keymapper\\$_\").Replace('%DIR%', $dir)",
        "    Set-Content \"$dir\\$_\" $content",
        "}"
    ],
    "bin": [
        "keymapper.exe",
        "keymapperctl.exe",
        "keymapperd.exe"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/houmain/keymapper/releases/download/$version/keymapper-$version-Windows-x86_64.zip",
                "extract_dir": "keymapper-$version-Windows-x86_64"
            }
        }
    }
}
