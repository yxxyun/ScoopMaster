{
    "version": "1.0.3",
    "description": "A highly configurable cross-platform (Windows) status bar written in Python. ",
    "homepage": "https://github.com/amnweb/yasb",
    "license": "MIT",
    "notes": [
        "This repository is updated on a regular basis; when you update files, always check styles.css and config.yaml for new features and changes; otherwise, your config can be broken."
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/amnweb/yasb/releases/download/v1.0.3/yasb-1.0.3-win64.msi",
            "hash": "59d79e56ed8cd221929369b63c42d51c11b5dfb0e08fa6b4dbac9ab398f51fcf"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config.yaml\")) {",
        "    Invoke-WebRequest \"https://raw.githubusercontent.com/amnweb/yasb/v$version/src/config.yaml\" -OutFile \"$persist_dir\\config.yaml\"",
        "}",
        "if (!(Test-Path \"$persist_dir\\styles.css\")) {",
        "    Invoke-WebRequest \"https://raw.githubusercontent.com/amnweb/yasb/v$version/src/styles.css\" -OutFile \"$persist_dir\\styles.css\"",
        "}"
    ],
    "shortcuts": [
        [
            "yasb.exe",
            "Yasb"
        ]
    ],
    "persist": [
        "config.yaml",
        "styles.css"
    ],
    "checkver": {
        "github": "https://github.com/amnweb/yasb"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/amnweb/yasb/releases/download/v$version/yasb-$version-win64.msi"
            }
        }
    }
}
