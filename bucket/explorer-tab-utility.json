    "pre_install": [
        "$subDirectories = Get-ChildItem -Path $dir -Directory -Recurse",
        "foreach ($directory in $subDirectories) {",
        "    $items = Get-ChildItem -Path $directory.FullName -Force -File -Recurse",
        "    foreach ($item in $items) {",
        "        $destinationPath = Join-Path -Path $dir -ChildPath $item.Name",
        "        Move-Item -Path $item.FullName -Destination $destinationPath -Force",
        "    }",
        "    Remove-Item -Path $directory -Recurse",
        "}"
    ],
