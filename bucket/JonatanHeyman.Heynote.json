{
    "version": "2.3.1",
    "description": "为开发人员提供的专用便签本。A dedicated scratchpad for developers.",
    "homepage": "https://heynote.com/",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/heyman/heynote/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/heyman/heynote/releases/download/v2.3.1/Heynote_2.3.1.exe",
            "hash": "464a5b601f9d5789afdc58c4551a72333eaffad9b20c6a40710ef1b12b246401"
        }
    },
    "shortcuts": [
        [
            "Heynote.exe",
            "Heynote"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreInstall",
        "A-Install-Exe"
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostInstall",
        "A-New-LinkDirectory @(\"$env:AppData\\Heynote\")"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PreUninstall",
        "A-Stop-Process",
        "A-Remove-Link",
        "A-Uninstall-Exe -Uninstaller 'Uninstall Heynote.exe'",
        "A-Remove-TempData @(\"$env:LocalAppData\\heynote-updater\")"
    ],
    "post_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Start-PostUninstall"
    ],
    "checkver": {
        "github": "https://github.com/heyman/heynote"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/heyman/heynote/releases/download/v$version/Heynote_$version.exe"
            }
        }
    }
}
