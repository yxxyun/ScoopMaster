    "bin": "zen.exe",
    "shortcuts": [
        [
            "zen.exe",
            "Zen Browser"
        ],
        [
            "zen.exe",
            "Zen Browser Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "github": "https://github.com/zen-browser/desktop",
        "regex": "/releases/tag/([\\d.]+-?b[.\\d]?)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
