    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/lin-ycv/EverythingPowerToys/releases/download/v0.89.0/EverythingPT-0.89.0-x64.zip",
            "hash": "4eb7e839e8ef4c3eb81dcc48d927cb1f9c761b2c25eb1b41a453c08879012353"
        },
        "arm64": {
            "url": "https://github.com/lin-ycv/EverythingPowerToys/releases/download/v0.89.0/EverythingPT-0.89.0-ARM64.zip",
            "hash": "4d71bfe94942942911d2dd6ffce9d42e5a977e6289c0b199ba2e0282a9f7f4ba"
        }
    },
    "pre_install": [
        "$dirName = \"Everything\"",
        "$pluginsDir = \"$env:LOCALAPPDATA\\Microsoft\\PowerToys\\PowerToys Run\\Plugins\"",
        "# -------------------------------------------------------------------------------",
        "try {",
        "    Write-Host",
        "    if(Test-Path -Path \"$pluginsDir\\$dirName\") {",
        "        Write-Host \"Removing $pluginsDir\\$dirName\" -ForegroundColor Yellow",
        "        Remove-Item -Path \"$pluginsDir\\$dirName\" -Recurse -Force -Confirm:$false -ErrorAction Stop",
        "    }",
        "    Write-Host \"Copying $dir\\$dirName => $pluginsDir\\$dirName\" -ForegroundColor Yellow",
        "    Copy-Item -Path \"$dir\\$dirName\" -Destination \"$pluginsDir\\$dirName\" -Recurse -Force -Confirm:$false",
        "    Write-Host \"Please restart PowerToys to load the plugin.\" -ForegroundColor Green",
        "} catch {",
        "    Write-Host",
        "    Write-Host \"$dirName plugin folder cannot be removed.\" -ForegroundColor Red",
        "    Write-Host \"Failed to $cmd $app.\" -ForegroundColor Red",
        "    Write-Host \"Please stop PowerToys and try to $cmd $app again.\" -ForegroundColor Red",
        "    Write-Host",
        "    throw \"Cannot remove the $dirName plugin folder: '$pluginsDir\\$dirName'\"",
        "}"
    ],
    "pre_uninstall": [
        "$dirName = \"Everything\"",
        "$pluginsDir = \"$env:LOCALAPPDATA\\Microsoft\\PowerToys\\PowerToys Run\\Plugins\"",
        "# -------------------------------------------------------------------------------",
        "try {",
        "    if(Test-Path -Path \"$pluginsDir\\$dirName\") {",
        "        Write-Host",
        "        Write-Host \"Removing $pluginsDir\\$dirName\" -ForegroundColor Yellow",
        "        Remove-Item -Path \"$pluginsDir\\$dirName\" -Recurse -Force -Confirm:$false -ErrorAction Stop",
        "    }",
        "} catch {",
        "    Write-Host",
        "    Write-Host \"$dirName plugin folder cannot be removed.\" -ForegroundColor Red",
        "    Write-Host \"Failed to $cmd $app.\" -ForegroundColor Red",
        "    Write-Host \"Please stop PowerToys and try to $cmd $app again.\" -ForegroundColor Red",
        "    Write-Host",
        "    throw \"Cannot remove the $dirName plugin folder: '$pluginsDir\\$dirName'\"",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/lin-ycv/EverythingPowerToys/releases/download/v$version/EverythingPT-$version-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/lin-ycv/EverythingPowerToys/releases/download/v$version/EverythingPT-$version-ARM64.zip"
            }
        }
    }
}
