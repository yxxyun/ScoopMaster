{
    "version": "1.0.14321",
    "description": "An AI-powered IDE Chinese local version that makes programming more enjoyable and efficient.",
    "homepage": "https://www.trae.com.cn",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://lf-cdn.trae.com.cn/obj/trae-com-cn/pkg/app/releases/stable/1.0.14321/win32/Trae%20CN-Setup-x64.exe",
            "hash": "1cb79955dbfe896e43ad0e7d7e6d61faccf7e15259a0b2aa50af8de9abc9232b",
            "extract_dir": "{code_GetDestDir}"
        }
    },
    "innosetup": true,
    "post_install": [
        "if (!(Test-Path \"$dir\\data\\extensions\") -and (Test-Path \"$env:USERPROFILE\\.trae-cn\\extensions\")) {",
        "    info '[Portable Mode] Copying extensions...'",
        "    Copy-Item \"$env:USERPROFILE\\.trae-cn\\extensions\" \"$dir\\data\" -Recurse",
        "}",
        "if (!(Test-Path \"$dir\\data\\user-data\") -and (Test-Path \"$env:AppData\\Trae CN\")) {",
        "    info '[Portable Mode] Copying user data...'",
        "    Copy-Item \"$env:AppData\\Trae CN\" \"$dir\\data\\user-data\" -Recurse",
        "}",
        "$extensions_file = \"$dir\\data\\extensions\\extensions.json\"",
        "if ((Test-Path \"$extensions_file\")) {",
        "    info 'Adjusting path in extensions file...'",
        "    (Get-Content \"$extensions_file\") -replace '(?<=trae-cn(/|\\\\\\\\)).*?(?=(/|\\\\\\\\)data(/|\\\\\\\\)extensions)', $version | Set-Content \"$extensions_file\"",
        "}"
    ],
    "bin": "bin/trae.cmd",
    "shortcuts": [
        [
            "Trae CN.exe",
            "Trae-CN",
            "--user-data-dir=\"$dir\\data\\user-data\" --extensions-dir=\"$dir\\data\\extensions\""
        ]
    ],
    "persist": "data",
    "checkver": {
        "url": "https://api.trae.com.cn/icube/api/v1/native/version/trae/cn/latest",
        "jsonpath": "$.data.manifest.win32.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://lf-cdn.trae.com.cn/obj/trae-com-cn/pkg/app/releases/stable/$version/win32/Trae%20CN-Setup-x64.exe"
            }
        }
    },
    "notes": [
        "English version is named 'Trae' (www.trae.ai) but not Trae-CN (www.trae.com.cn).",
        "Chinese version number in the filename is not always same as what we can get from https://docs.trae.com.cn/changelog/changelog?_lang=zh.",
        "For example, version 5.8 is listed in changelog, but in the filename is 1.0.12804 on https://api.trae.com.cn/icube/api/v1/native/version/trae/cn/latest.",
        "As the same time, the global version is 1.0.8482 recorded on https://api.trae.ai/icube/api/v1/native/version/trae/latest."
    ]
}
