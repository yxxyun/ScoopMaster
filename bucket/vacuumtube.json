{
    "version": "1.4.0",
    "description": "VacuumTube is an unofficial wrapper of YouTube Leanback (the console and Smart TV version of YouTube) for the desktop, with a built-in adblocker and minor enhancements.",
    "homepage": "https://github.com/shy1132/VacuumTube",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/shy1132/VacuumTube/releases/download/v1.4.0/VacuumTube-x64-Portable.zip",
            "hash": "eea87e00ba6e5a05ecda685f3566775a8d3476f07fefc6907aab20c50d675a83"
        },
        "arm64": {
            "url": "https://github.com/shy1132/VacuumTube/releases/download/v1.4.0/VacuumTube-arm64-Portable.zip",
            "hash": "6e56178a9994ddc9b58a9179b372a0bc025541a974752f7837f5f9cb8c7b824a"
        }
    },
    "persist": "data",
    "post_install": [
        "$appdata = \"$env:APPDATA\\VacuumTube\"",
        "$persistData = \"$persist_dir\\data\"",
        "if (!(Test-Path $persistData)) {",
        "    New-Item -ItemType Directory -Path $persistData | Out-Null",
        "}",
        "if (Test-Path $appdata) {",
        "    Write-Host \"Migrating existing data from AppData to persist directory...\"",
        "    try {",
        "        Get-ChildItem -Path $appdata | ForEach-Object {",
        "            Move-Item -Path $_.FullName -Destination $persistData -Force -ErrorAction Stop",
        "        }",
        "        if ((Get-ChildItem -Path $appdata -Recurse -ErrorAction SilentlyContinue | Measure-Object).Count -eq 0) {",
        "            Remove-Item $appdata -Recurse -Force",
        "            Write-Host \"Migration completed successfully.\"",
        "        }",
        "    } catch {",
        "        Write-Host \"Warning: Migration encountered an error: $_\" -ForegroundColor Yellow",
        "    }",
        "}",
        "if (!(Test-Path $appdata)) {",
        "    New-Item -ItemType Junction -Path $appdata -Target $persistData | Out-Null",
        "}"
    ],
    "post_uninstall": [
        "$appdata = \"$env:APPDATA\\VacuumTube\"",
        "$item = Get-Item $appdata -ErrorAction SilentlyContinue",
        "if ($item -and $item.LinkType -eq 'Junction') {",
        "    Remove-Item $appdata -Force",
        "}"
    ],
    "shortcuts": [
        [
            "VacuumTube.exe",
            "VacuumTube"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/shy1132/VacuumTube/releases/download/v$version/VacuumTube-x64-Portable.zip"
            },
            "arm64": {
                "url": "https://github.com/shy1132/VacuumTube/releases/download/v$version/VacuumTube-arm64-Portable.zip"
            }
        }
    }
}
