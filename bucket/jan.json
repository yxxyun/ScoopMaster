        [
            "Jan.exe",
            "Jan"
        ]
    ],
    "checkver": {
        "github": "https://github.com/janhq/jan"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/janhq/jan/releases/download/v$version/jan-win-x64-$version.exe",
                "hash": {
                    "url": "https://github.com/janhq/jan/releases/download/v$version/latest.yml",
                    "regex": "sha512: $base64"
                }
            }
        }
    }
