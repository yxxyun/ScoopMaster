{
  "version": "1.0.1",
  "homepage": "https://github.com/containers/podman-tui",
  "description": "A TUI (Terminal User Interface) for Podman v4 and v5, the container management tool.",
  "bin": ["podman-tui"],
  "alias": {
    "ptui": "podman-tui"
  },
  "checkver": {
    "url": "https://api.github.com/repos/containers/podman-tui/releases/latest",
    "regex": "v(\\d+\\.\\d+\\.\\d+)"
  },
  "download": {
    "url": "https://github.com/containers/podman-tui/releases/latest",
    "filter": {
      "regex": "(?i)podman-tui-(\\d+\\.\\d+\\.\\d+)-([a-zA-Z]+)\\.zip",
      "os": "windows|linux|darwin"
    },
    "checksum": {
      "url": "https://github.com/containers/podman-tui/releases/latest/download/shasums",
      "algorithm": "sha256"
    }
  }
}
