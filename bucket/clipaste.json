{
    "version": "1.0.2",
    "description": "Private clipboard manager with history, search, favorites and drag-n-drop",
    "homepage": "https://www.ntwind.com/cross-platform/clipaste.html",
    "license": "Freeware",
    "url": "https://www.ntwind.com/download/Clipaste_1.0.2-win-x64.exe",
    "installer": {
        "script": [
            "Start-Process \"$dir\\$fname\" -ArgumentList '/S' -Wait",
            "Remove-Item \"$dir\\$fname\""
        ]
    },
    "uninstaller": {
        "script": [
            "$uninstall = Get-ItemProperty HKLM:\\Software\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\* | Where-Object {$_.DisplayName -like '*Clipaste*'}",
            "if ($uninstall) {",
            "    Start-Process $uninstall.UninstallString -ArgumentList '/S' -Wait",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.ntwind.com/cross-platform/clipaste.html",
        "regex": "Clipaste_([\\d.]+)-win-x64\\.exe"
    },
    "autoupdate": {
        "url": "https://www.ntwind.com/download/Clipaste_$version-win-x64.exe"
    },
