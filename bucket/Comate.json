{
    "version": "0.8.2",
    "description": "码随心动，快人一步，更懂你的智能代码助手",
    "homepage": "https://comate.baidu.com/zh/download/ai-ide",
    "license": "Proprietary",
    "notes": [
        "For github integration, run:",
        "'reg import \"$dir\\install-github-integration.reg\"'"
    ],
    "architecture": {
        "64bit": {
            "url": "https://comate-ide.cdn.bcebos.com/download/stable/7f425d3237cc616f2922fb9b83cf7f1504a6aa7a-232110096/Comate-win32-x64-user-setup.exe",
            "hash": "7bc7536d5b2c8924ea1fcd4b731d42b4d9d3e6177cee00177a8a9c193d5df0f4",
            "extract_dir": "{code_GetDestDir}"
        }
    },
    "innosetup": true,
    "pre_install": [
        "# 处理用户配置目录",
        "$config_dirs = @(",
        "    '.comate'",
        ")",
        "foreach ($config_dir in $config_dirs) {",
        "    $target_dir = Join-Path $env:USERPROFILE $config_dir",
        "    $link_dir = Join-Path $persist_dir $config_dir",
        "    & \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $target_dir $link_dir",
        "}",
        "",
        "# 链接 $env:APPDATA\\Comate 到 persist_dir/data",
        "$appdata_dir = Join-Path $env:APPDATA \"Comate\"",
        "$persist_data_dir = Join-Path $persist_dir data",
        "& \"$bucketsdir\\$bucket\\scripts\\link.ps1\" $appdata_dir $persist_data_dir"
    ],
    "post_install": [
        "$dirpath = \"$dir\".Replace('\\', '\\\\')",
        "$exepath = \"$dir\\comate.exe\".Replace('\\', '\\\\')",
        "'install-associations', 'uninstall-associations', 'install-context', 'uninstall-context', 'install-github-integration', 'uninstall-github-integration' | ForEach-Object {",
        "  if (Test-Path \"$bucketsdir\\$bucket\\scripts\\comate\\$_.reg\") {",
        "    $content = Get-Content \"$bucketsdir\\$bucket\\scripts\\comate\\$_.reg\"",
        "    $content = $content.Replace('$comatedir', $dirpath)",
        "    $content = $content.Replace('$comate', $exepath)",
        "    if ($global) {",
        "      $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    $content | Set-Content -Path \"$dir\\$_.reg\"",
        "  }",
        "}",
        "# 自动导入注册表（可选）",
        "reg import \"$dir\\install-context.reg\"",
        "reg import \"$dir\\install-associations.reg\""
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall')",
            "{",
            "   reg import \"$dir\\uninstall-context.reg\" ",
            "   reg import \"$dir\\uninstall-github-integration.reg\" ",
            "}"
        ]
    },
    "bin": [
        [
            "bin/comate.cmd",
            "comate"
        ]
    ],
    "shortcuts": [
        [
            "comate.exe",
            "Comate"
        ]
    ],
    "persist": [
        "data",
        ".comate"
    ],
    "checkver": {
        "url": "https://comate.baidu.com/api/aiIde/updates/stable/win32/x64/user/latest.json",
        "re": "\"url\":.*\"https://(?<link>.*)\"[\\s\\S]*\"name\":.*\"(?<version>.*)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://$matchLink",
                "hash": {
                    "url": "https://comate.baidu.com/api/aiIde/updates/stable/win32/x64/user/latest.json",
                    "jp": "$[0].sha256hash"
                }
            }
        }
    }
}
