{
    "version": "1.8",
    "description": "A smart tool for managing GitHub hosts to improve access speed",
    "homepage": "https://github.com/KenDvD/SmartHostsTool-github",
    "license": "MIT",
    "notes": [
        "SmartHostsTool 用于优化 GitHub 访问速度",
        "用户数据目录：%LOCALAPPDATA%\\SmartHostsTool\\",
        "本包会将该目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "url": "https://github.com/KenDvD/SmartHostsTool-github/releases/download/V1.8/SmartHostsTool.exe",
    "hash": "95c4e36ac608166cd8bffac15f061e07867eb45922ca3aca6bc35a9daec308f7",
    "bin": "SmartHostsTool.exe",
    "shortcuts": [
        [
            "SmartHostsTool.exe",
            "SmartHostsTool"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:LOCALAPPDATA 'SmartHostsTool'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/KenDvD/SmartHostsTool-github"
    },
    "autoupdate": {
        "url": "https://github.com/KenDvD/SmartHostsTool-github/releases/download/V$version/SmartHostsTool.exe"
    }
}
