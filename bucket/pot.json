    "A-Remove-TempData @(\"$env:LocalAppData\\com.pot-app.desktop\")"
  ],
  "post_uninstall": [
    "$bucket = $install.bucket",
    ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
