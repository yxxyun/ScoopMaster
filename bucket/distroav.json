{
    "version": "6.1.1",
    "homepage":"https://github.com/DistroAV/DistroAV",
    "url":"https://github.com/DistroAV/DistroAV/releases/download/6.1.1/distroav-6.1.1-windows-x64.zip",
    "hash":"sha256:e5690fe6ae589e19be003413835f9169a8f18df0bc53b858d7292928b661c529",
    "depands": {
        "OBS Studio":"obs-studio",
        "##":"別途NDI Toolsが必要"
    },
    "post_install":[
        "New-Item -Value \"$dir\\distroav\\data\" -Path \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\distroav\" -ItemType Junction",
        "Get-ChildItem -Directory -Path \"$dir\\distroav\\bin\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType Junction}",
        "Get-ChildItem -File -Path \"$dir\\distroav\\bin\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType hardlink}"
    ],
    "pre_uninstall":[
        "Remove-Item \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\distroav\" -recurse",
        "Get-ChildItem -Directory -Path \"$dir\\distroav\\bin\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -recurse}",
        "Get-ChildItem -File -Path \"$dir\\distroav\\bin\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\"}"
    ]
}
