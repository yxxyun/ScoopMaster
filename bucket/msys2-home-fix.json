{
   "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
   "version": "1.0.1",
   "description": "Fix MSYS2 home. This link Windows user folder to MSYS2 home directory.",
   "depends": "main/msys2",
   "url": "https://raw.githubusercontent.com/silver886/scoop/master/bucket/msys2-home-fix.json",
   "hash": "af2a2e0224a0ff68ef2f7c2d9d5a0286f4a0de69f61377451dddafd55e0e6ee3",
   "installer": {
      "script": [
         "if ((Test-Path -Path \"$persist_dir\\..\\msys2\\home\\$env:UserName\" -PathType Container) -and ([bool]((Get-Item -Path \"$persist_dir\\..\\msys2\\home\\$env:UserName\").Attributes -band (-not [IO.FileAttributes]::ReparsePoint)))) {",
         "  Remove-Item -Path \"$persist_dir\\..\\msys2\\home\\$env:UserName\" -Recurse > $null",
         "}",
         "New-Item -ItemType Junction -Path \"$persist_dir\\..\\msys2\\home\\$env:UserName\" -Target \"$env:UserProfile\" > $null"
      ]
   },
   "uninstaller": {
      "script": "Remove-Item -Path \"$persist_dir\\..\\msys2\\home\\$env:UserName\" > $null"
   },
   "checkver": {
      "url": "https://raw.githubusercontent.com/silver886/scoop/master/bucket/msys2-home-fix.json",
      "jsonpath": "$.version"
   },
   "autoupdate": {
      "url": "https://raw.githubusercontent.com/silver886/scoop/master/bucket/msys2-home-fix.json"
   }
}
