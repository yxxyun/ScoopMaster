            "hash": "82ada532f16cbcf3bfca6f09c4bc3233f4d04024498112000246a293d52702a3"
        }
    },
    "shortcuts": [
        [
            "Resources\\Bin\\XXMI Launcher.exe",
            "XXMI Launcher"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$dir\\XXMI Launcher Config.json\") -or !(Get-Item \"$dir\\XXMI Launcher Config.json\").Length) {",
        "    New-Item \"$dir\\XXMI Launcher Config.json\" -ItemType File -Force -ErrorAction SilentlyContinue | Out-Null",
        "    Set-Content -Path \"$dir\\XXMI Launcher Config.json\" -Value '{\"Launcher\":{\"auto_update\":false}}'",
        "}"
    ],
    "installer": {
        "script": [
            "if (!(Test-Path \"$persist_dir\\WWMI\\d3dx.ini\")) {",
            "    ensure \"$persist_dir\\WWMI\"",
            "    Invoke-Download \"http://api.xrgzs.top/ghrelease/?repo=SpectrumQT/WWMI&search=WWMI-PACKAGE&filter=.zip&mirror=auto\" \"$dir\\WWMI.zip\"",
            "    Expand-ZipArchive \"$dir\\WWMI.zip\" \"$dir\\WWMI\" -Removal",
            "}",
            "if (!(Test-Path \"$persist_dir\\ZZMI\\d3dx.ini\")) {",
            "    ensure \"$persist_dir\\ZZMI\"",
            "    Invoke-Download \"http://api.xrgzs.top/ghrelease/?repo=leotorrez/ZZ-Model-Importer&search=3dmigoto.ZZMI.for.playing.mods&filter=.zip&mirror=auto\" \"$dir\\ZZMI.zip\"",
            "    Expand-ZipArchive \"$dir\\ZZMI.zip\" \"$dir\\ZZMI\" -Removal",
            "}",
            "if (!(Test-Path \"$persist_dir\\SRMI\\d3dx.ini\")) {",
            "    ensure \"$persist_dir\\SRMI\"",
            "    Invoke-Download \"http://api.xrgzs.top/ghrelease/?repo=SilentNightSound/SR-Model-Importer&search=3dmigoto.SRMI.for.playing.mods&filter=.zip&mirror=auto\" \"$dir\\SRMI.zip\"",
            "    Expand-ZipArchive \"$dir\\SRMI.zip\" \"$dir\\SRMI\" -Removal",
            "}",
            "if (!(Test-Path \"$persist_dir\\GIMI\\d3dx.ini\")) {",
            "    ensure \"$persist_dir\\GIMI\"",
            "    Invoke-Download \"http://api.xrgzs.top/ghrelease/?repo=SilentNightSound/GI-Model-Importer&search=3dmigoto-GIMI-for-playing-mods&filter=.zip&mirror=auto\" \"$dir\\GIMI.zip\"",
            "    Expand-ZipArchive \"$dir\\GIMI.zip\" \"$dir\\GIMI\" -Removal",
            "}"
        ]
    },
    "persist": [
        "XXMI Launcher Config.json",
        "WWMI",
        "ZZMI",
        "SRMI",
        "GIMI"
    ],
    "checkver": "github",
    "autoupdate": {
