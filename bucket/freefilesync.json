{
    "version": "14.7",
    "description": "FreeFileSync is a folder comparison and synchronization software that creates and manages backup copies of all your important files.",
    "homepage": "https://github.com/hkneptune/FreeFileSync",
    "license": "GPL-3.0",
    "url": "https://github.com/hkneptune/FreeFileSync/releases/download/v14.7/FreeFileSync_14.7_Windows_Setup.exe",
    "hash": "6ac241dda9797997e5099ef294fbaf92061ee11694097644db70a6416c6daa47",
    "installer": {
        "script": [
            "$installer = Get-ChildItem \"$dir\" -Filter '*.exe' | Select-Object -First 1",
            "Start-Process -Wait \"$($installer.FullName)\" -ArgumentList '/S' -Verb RunAs",
            "Remove-Item \"$($installer.FullName)\""
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$env:ProgramFiles\\FreeFileSync\\Uninstall.exe\") {",
            "    Start-Process -Wait \"$env:ProgramFiles\\FreeFileSync\\Uninstall.exe\" -ArgumentList '/S' -Verb RunAs",
            "}"
        ]
    },
    "checkver": {
        "url": "https://api.github.com/repos/hkneptune/FreeFileSync/releases/latest",
        "jsonpath": "$.tag_name",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/hkneptune/FreeFileSync/releases/download/v$version/FreeFileSync_$version_Windows_Setup.exe",
        "hash": {
            "url": "https://github.com/hkneptune/FreeFileSync/releases/tag/v$version",
            "regex": "FreeFileSync_$version_Windows_Setup\\.exe.*?([a-fA-F0-9]{64})"
        }
    }
}
