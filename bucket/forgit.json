{
    "version": "26.01.0",
    "description": "A utility tool powered by fzf for using git interactively.",
    "homepage": "https://github.com/wfxr/forgit",
    "license": "MIT",
    "notes": "Recommend adding $env:SCOOP\\apps\\git\\current\\bin, $env:SCOOP\\apps\\git\\current\\usr\\bin, from the manifest main/git to the top of the system environment's PATH.",
    "architecture": {
        "64bit": {
            "url": "https://github.com/wfxr/forgit/releases/download/26.01.0/forgit-26.01.0.tar.gz",
            "hash": "df16e3ca5da44724d2712f26e6df3190c43fa35e0f6d0e48da055fa426f9aa36"
        }
    },
    "extract_dir": "bin",
    "pre_install": [
        "New-Item -Path \"$dir\\forgit.cmd\" -ItemType File -Force",
        "Add-Content -Path \"$dir\\forgit.cmd\" -Value \"bash $env:SCOOP\\apps\\forgit\\current\\git-forgit %*\""
    ],
    "bin": "forgit.cmd",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wfxr/forgit/releases/download/$version/forgit-$version.tar.gz"
            }
        }
    }
}
