{
    "//": "from https://github.com/dodorz/scoop/blob/master/UpNote.json",
    "version":  "9.15.1",
    "description": "A clean and clutter-free note space",
    "homepage":  "https://getupnote.com/#download",
    "license": "freeware",
    "architecture": {
        "64bit": {
            "//": "using wayback machine to get the exact version, one would automate all of this via github actions",
            "url": "https://web.archive.org/web/20251215083714if_/https://download.getupnote.com/app/UpNote%20Setup.exe",
            "hash": ""
        }
    },
    "installer": {
        "script": [
            "$file = (Get-ChildItem \"$dir\" 'UpNote*.exe' | Select-Object -First 1).FullName",
            "Expand-7ZipArchive \"$file\" \"$dir\\\" -Removal",
            "Expand-7ZipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal",
            "Remove-Item \"$dir\\`$PLUGINSDIR\",\"$dir\\`$R0\"  -Force -Recurse"
        ]
    },
    "shortcuts": [
        [
            "UpNote.exe",
            "UpNote"
        ]
    ],
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.getupnote.com/app/UpNote%20Setup.exe"
            }
        }
    }
}
