{
    "version": "0.7.3",
    "description": "Claude Desktop - AI assistant by Anthropic",
    "homepage": "https://claude.ai",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://storage.googleapis.com/claude-desktop/Claude-Setup.exe",
            "hash": "sha256:placeholder_hash_here"
        }
    },
    "installer": {
        "script": [
            "Start-Process -Wait -FilePath \"$dir\\Claude-Setup.exe\" -ArgumentList '/S' -PassThru"
        ]
    },
    "uninstaller": {
        "script": [
            "$uninstallKey = Get-ItemProperty -Path 'HKLM:\\Software\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\*' | Where-Object { $_.DisplayName -like '*Claude*' }",
            "if ($uninstallKey) {",
            "    Start-Process -Wait -FilePath $uninstallKey.UninstallString -ArgumentList '/S' -PassThru",
            "}"
        ]
    },
    "checkver": {
        "url": "https://claude.ai/download",
        "regex": "Version ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://storage.googleapis.com/claude-desktop/Claude-Setup.exe"
            }
        }
    },
    "notes": [
        "Claude Desktop requires an internet connection to function.",
        "You'll need to sign in with your Anthropic account after installation."
    ]
}
