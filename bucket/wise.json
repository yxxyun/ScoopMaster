{
    "version": "7.2.4.697",
    "description": "Clean registry and junk files from your PCs. Protect your privacy and make your PCs more secure. Provide a better option of optimizing and accelerating your computer!",
    "homepage": "https://www.wisecleaner.com",
    "license": "Freeware",
    "url": "https://downloads.wisecleaner.com/soft/WiseCare365_7.2.4.697.exe",
    "hash": "eae197d2c436cd29b1841f2126d21616dc30285d959df71dfcec7f479dc75372",
    "innosetup": true,
    "installer": {
        "script": [
            "if (-not (Test-Path \"$persist_dir\")) { ",
            "  New-Item -Path \"$persist_dir\" -ItemType Directory | Out-Null",
            "}",
            "if (-not (Test-Path \"$persist_dir\\Toolbox\")) { ",
            "  New-Item -Path \"$persist_dir\\Toolbox\" -ItemType Directory | Out-Null",
            "}",
            "New-Item -Force -ItemType Junction -Path \"$dir\\Toolbox\" -Value \"$persist_dir\\Toolbox\"  | Out-Null",
            "Remove-Item -Recurse -Force -Path \"C:\\Program Files*\\Wise\"",
            "New-Item -Force -ItemType Junction -Path \"C:\\Program Files (x86)\\Wise\" -Value \"$persist_dir\\Toolbox\" | Out-Null",
            "New-Item -Force -ItemType Junction -Path \"C:\\Program Files\\Wise\" -Value \"$persist_dir\\Toolbox\" | Out-Null",
            "if (-not (Test-Path \"$persist_dir\\config.ini\")) { ",
            "  New-Item -Force -Path \"$dir\\config.ini\" | Out-Null",
            "  echo \"[General]\" >> \"$dir\\config.ini\"",
            "  echo \"checkNewVer=3\" >> \"$dir\\config.ini\"",
            "  echo \"UpdateMode=3\" >> \"$dir\\config.ini\"",
            "  echo \"BootStartup=0\" >> \"$dir\\config.ini\"",
            "  echo \"StartBooster=0\" >> \"$dir\\config.ini\"",
            "  echo \"TurboCheck=0\" >> \"$dir\\config.ini\"",
            "  echo \"CloseTray=1\" >> \"$dir\\config.ini\"",
            "  echo \"ContextMenuFileShred=0\" >> \"$dir\\config.ini\"",
            "  echo \"MessageIDs=,684\" >> \"$dir\\config.ini\"",
            "  echo \"UserUE=1\" >> \"$dir\\config.ini\"",
            "  echo \"HintSpecialDay5=0\" >> \"$dir\\config.ini\"",
            "  echo \"[GUI]\" >> \"$dir\\config.ini\"",
            "  echo \"rmdlg=1\" >> \"$dir\\config.ini\"",
            " }",
            "if (-not (Test-Path \"$persist_dir\\config_tray.ini\")) { ",
            "  New-Item -Force -Path \"$dir\\config_tray.ini\" | Out-Null",
            "  echo \"[General]\" >> \"$dir\\config_tray.ini\"",
            "  echo \"ShowFloatWnd=0\" >> \"$dir\\config_tray.ini\"",
            " }",
            "if (-not (Test-Path \"$persist_dir\\toolsv6.ini\")) { ",
            "  Copy-Item \"$dir\\tools\\toolsv6.ini\" \"$dir\\toolsv6.ini\" | Out-Null",
            "  (Get-Content \"$dir\\toolsv6.ini\").Replace('InstallPar=/VERYSILENT', 'InstallPar=/VERYSILENT /NOICONS') | Set-Content -Path \"$dir\\toolsv6.ini\"",
            " }",
            "if (-not (Test-Path \"$persist_dir\\WPUSetup.exe\")) { ",
            "  Invoke-WebRequest https://downloads.wisecleaner.com/soft/WPUSetup.exe -OutFile \"$persist_dir\\WPUSetup.exe\"",
            "}",
            "& \"$persist_dir\\WPUSetup.exe\" /VERYSILENT /NOICONS /DIR=\"$persist_dir\\Toolbox\\ProgramUninstaller\" | Wait-Process",
            "if (-not (Test-Path \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\")) { ",
            "  New-Item -Force -Path \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\" | Out-Null",
            "  echo \"[General]\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"AutoUpdate=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"CheckVer=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"SearchLeft=1\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"submit=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"CreateRestorePoint=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"MsgIDs=,687\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"UEI=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"getad=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"[GUI]\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"SaveLeftOver=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"Delecting=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "  echo \"DelLeftOver=0\" >> \"$dir\\Toolbox\\ProgramUninstaller\\config.ini\"",
            "}"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item -Recurse -Force -Path \"$Env:ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\Wise*\""
    },
    "shortcuts": [
        [
            "WiseCare365.exe",
            "Wise\\系统清理"
        ],
        [
            "Toolbox\\ProgramUninstaller\\WiseProgramUninstaller.exe",
            "Wise\\强力卸载"
        ]
    ],
    "persist": [
        "config.ini",
        "config_tray.ini",
        "DefragOptions.ini",
        "toolsv6.ini"
    ],
    "checkver": {
        "url": "https://www.wisecleaner.com/download.html",
        "regex": "WiseCare365_(?<version>[\\d\\.]+)\\.zip"
    },
