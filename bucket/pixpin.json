        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App"
    ],
    "post_uninstall": "Remove-Item \"$env:USERPROFILE\\Desktop\\PixPin.lnk\" -Force -ErrorAction SilentlyContinue | Out-Null",
    "checkver": {
        "regex": "PixPin_([\\d\\.]+)\\.exe"
    },
    "autoupdate": {
        "url": "https://download.pixpinapp.com/PixPin_$match1.zip"
    }
