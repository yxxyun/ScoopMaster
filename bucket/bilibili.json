{
    "version": "1.16.5",
    "description": "哔哩哔哩(Bilibili) 的 Windows 桌面程序。A windows client for Bilibili.",
    "homepage": "https://app.bilibili.com/",
    "license": "Unknown",
    "architecture": {
        "64bit": {
            "url": "https://dl.hdslb.com/mobile/pack/bili_win/19107735/public/bilibili-setup-v1.16.5.exe#/dl.7z",
            "hash": "d6fd4c7bff8410ff1b53c4c9b729fc0329bc8d0b8c7a3eeda276519857fa1ce9",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\""
        },
        "arm64": {
            "url": "https://dl.hdslb.com/mobile/pack/bili_win/19107735/public/bilibili-setup-v1.16.5.exe#/dl.7z",
            "hash": "d6fd4c7bff8410ff1b53c4c9b729fc0329bc8d0b8c7a3eeda276519857fa1ce9",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-arm64.7z\" \"$dir\""
        }
    },
    "shortcuts": [
        [
            "哔哩哔哩.exe",
            "哔哩哔哩 Bilibili"
        ]
    ],
    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$LinkPaths = @(\"$env:AppData\\bilibili\")",
        "$LinkTargets = @(\"$persist_dir\\bilibili\")",
        "A-New-LinkDirectory $LinkPaths $LinkTargets"
    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Stop-Process",
        "A-Remove-LinkDirectory",
        "A-Remove-TempData @(\"$env:LocalAppData\\bilibili-updater\")"
    ],
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$InstallerInfo = A-Get-InstallerInfoFromWinget 'Bilibili/Bilibili' 'exe'",
            "\"ver:$($InstallerInfo.PackageVersion);\"",
            "\"x64:$($InstallerInfo.x64_machine.InstallerUrl);\"",
            "\"arm64:$($InstallerInfo.arm64_machine.InstallerUrl);\""
        ],
        "regex": "ver:(?<version>.+?); x64:(?<x64>.+?); arm64:(?<arm64>.+?);"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchX64#/dl.7z",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.x64_machine.InstallerSha256"
                }
            },
            "arm64": {
                "url": "$matchArm64#/dl.7z",
                "hash": {
                    "url": "bin/scoop-auto-check-update-temp-data.jsonc",
                    "jsonpath": "$.arm64_machine.InstallerSha256"
                }
            }
        }
    }
}
