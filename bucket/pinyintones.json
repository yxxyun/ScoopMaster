{
    "version": "0.9.0",
    "description": "PinyinTones is a Windows text service that allows you to type Pinyin tone marks into any Windows program.",
    "homepage": "https://www.pinyintones.com/",
    "notes": "This needs administrator permissions to install. ",
    "license": "MS-PL",
    "pre_install":[
        "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
        "Start-Process msiexec -ArgumentList @('/x', \"`\"\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs"
    ],
    "pre_uninstall":[
        "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
        "Start-Process msiexec -ArgumentList @('/x', \"`\"$dir\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs"
    ],
    "architecture": {
        "64bit": {
            "url": "https://www.pinyintones.com/releases/0.9.0/PinyinTones-0.9.0-64.msi#/setup.msi_",
