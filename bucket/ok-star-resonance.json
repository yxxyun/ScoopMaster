{
    "version": "0.0.19",
    "description": "基于 ok-script 的星痕共鸣自动工具",
    "homepage": "https://github.com/Sanheiii/ok-star-resonance",
    "license": "AGPL-3.0-or-later",
    "depends": [
        "python",
        "uv"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v0.0.19.zip#dl.7z",
            "hash": "3d175678c799b6c02cd4f08ed288f7f61bc2bc2807c6c1da2e2bc7ae9a24dd21",
            "extract_dir": "ok-star-resonance-0.0.19",
            "pre_install": [
                "Push-Location $dir",
                "Set-Content -Path \"Start.bat\" -Value \"powershell -Command `\"Start-Process 'uv' -ArgumentList 'run', 'main.py' -WorkingDirectory '$dir' -Verb RunAs -WindowStyle Hidden`\"\"",
                "Pop-Location"
            ],
            "post_install": [
                "Push-Location $dir",
                "uv venv",
                "uv pip install -r requirements.txt",
                "Pop-Location"
            ]
        }
    },
    "checkver": "github",
    "shortcuts": [
        [
            "Start.bat",
            "ok-star-resonance",
            "",
            "icons\\icon.ico"
        ]
    ],
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v$version.zip#dl.7z",
                "extract_dir": "ok-star-resonance-$version"
            }
        }
    }
}
