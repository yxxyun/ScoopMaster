{
    "version": "0.0.10",
    "description": "基于 ok-script 的星痕共鸣自动工具",
    "homepage": "https://github.com/Sanheiii/ok-star-resonance",
    "license": "AGPL-3.0-or-later",
    "depends": [
        "python",
        "uv"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v0.0.10.zip#dl.7z",
            "hash": "90f4579923ec4c6789a2a912f8953608d1a14ce9b818b1c1385b82ec43496664",
            "extract_dir": "ok-star-resonance-0.0.10",
            "pre_install": [
                "Push-Location $dir",
                "Set-Content -Path \"Start.bat\" -Value \"uv run main.py\"",
                "Pop-Location"
            ],
            "post_install": [
                "Push-Location $dir",
                "uv venv",
                "uv pip install -r requirements.txt",
                "Pop-Location"
            ]
        }
    },
    "checkver": "github",
    "shortcuts": [
        [
            "Start.bat",
            "ok-star-resonance",
            "",
            "icons\\icon.ico"
        ]
    ],
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v$version.zip#dl.7z",
                "extract_dir": "ok-star-resonance-$version"
            }
        }
    }
}
