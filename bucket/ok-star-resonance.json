{
    "version": "0.0.12",
    "description": "基于 ok-script 的星痕共鸣自动工具",
    "homepage": "https://github.com/Sanheiii/ok-star-resonance",
    "license": "AGPL-3.0-or-later",
    "depends": [
        "python",
        "uv"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v0.0.12.zip#dl.7z",
            "hash": "37ffdc5140f29802a81b31948cfeaaf2cfb2a9f2542c479cf7f7119ceee05d27",
            "extract_dir": "ok-star-resonance-0.0.12",
            "pre_install": [
                "Push-Location $dir",
                "Set-Content -Path \"Start.bat\" -Value \"powershell -Command `\"Start-Process 'uv' -ArgumentList 'run', 'main.py' -WorkingDirectory '$dir' -Verb RunAs -WindowStyle Hidden`\"\"",
                "Pop-Location"
            ],
            "post_install": [
                "Push-Location $dir",
                "uv venv",
                "uv pip install -r requirements.txt",
                "Pop-Location"
            ]
        }
    },
    "checkver": "github",
    "shortcuts": [
        [
            "Start.bat",
            "ok-star-resonance",
            "",
            "icons\\icon.ico"
        ]
    ],
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Sanheiii/ok-star-resonance/archive/refs/tags/v$version.zip#dl.7z",
                "extract_dir": "ok-star-resonance-$version"
            }
        }
    }
}
