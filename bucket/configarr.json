{
    "version": "1.17.2",
    "description": "Configuration tool for arr services (Radarr, Sonarr, etc.)",
    "homepage": "https://configarr.de/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/raydak-labs/configarr/releases/download/v1.17.2/configarr-windows-x64.tar.xz",
            "hash": "bc98b8a90cdd1b6bed48be2bef354a58e96b24261e281d61dca5967ece754024"
        }
    },
    "bin": "configarr.exe",
    "env_set": {
        "CONFIG_LOCATION": "$env:USERPROFILE\\.config\\configarr\\config.yml",
        "SECRETS_LOCATION": "$env:USERPROFILE\\.config\\configarr\\secrets.yml"
    },
    "post_install": [
        "$configDir = \"$env:USERPROFILE\\.config\\configarr\"",
        "if (!(Test-Path $configDir)) { New-Item -ItemType Directory -Path $configDir -Force | Out-Null }",
        "$baseUrl = 'https://raw.githubusercontent.com/raydak-labs/configarr/refs/heads/main/examples/full/config'",
        "if (!(Test-Path \"$configDir\\config.yml\")) {",
        "    try { Invoke-WebRequest \"$baseUrl/config.yml\" -OutFile \"$configDir\\config.yml\" } catch { }",
        "}",
        "if (!(Test-Path \"$configDir\\secrets.yml\")) {",
        "    try { Invoke-WebRequest \"$baseUrl/secrets.yml\" -OutFile \"$configDir\\secrets.yml\" } catch { }",
        "}"
    ],
    "notes": [
        "Config location: $env:USERPROFILE\\.config\\configarr\\",
        "Edit config.yml and secrets.yml before running.",
        "Documentation: https://configarr.de/docs/configuration/"
    ],
    "checkver": {
        "github": "https://github.com/raydak-labs/configarr"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/raydak-labs/configarr/releases/download/v$version/configarr-windows-x64.tar.xz"
            }
        }
    }
}
