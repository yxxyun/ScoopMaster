{
    "version": "0.0.1",
    "description": "自定义了数据路径",
    "homepage": "https://www.postgresql.org",
    "license": {
        "identifier": "PostgreSQL"
    },
    "url": "https://github.com/excitoon/empty/releases/download/empty-1.0.7/empty-1.0.7.zip",
    "hash": "8739c76e681f900923b900c9df0ef75cf421d39cabb54650c4b9ad19b6a76d85",
    "pre_install": [
        "$postgresql_scoop_persistdir = persistdir 'postgresql' $global",
        "New-Item -ItemType Directory $postgresql_scoop_persistdir -Force -ErrorAction SilentlyContinue",
        "Write-Host \"Persist dir path: $postgresql_scoop_persistdir\"",
        "try {",
        "    New-Item `",
        "        -ItemType SymbolicLink `",
        "        -Path (Join-Path ($postgresql_scoop_persistdir) 'data') `",
        "# TODO: 自动备份",
        "        -Target 'D:\\0_workspace\\postgresql_data' `",
        "        -ErrorAction Stop",
        "",
        "    Write-Host \"Symbolic link created successfully.\"",
        "}",
        "catch {",
        "    error $_",
        "    break",
        "}"
    ],
    "installer": {
        "script": ["scoop install main/postgresql"]
    },
    "uninstaller": {
        "script": ["scoop uninstall main/postgresql"]
    }
}
