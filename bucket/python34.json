{
    "$schema": "https://raw.githubusercontent.com/scoopinstaller/scoop/master/schema.json",
    "version": "3.4.4",
    "description": "Python 3.4.4 - A programming language that lets you work quickly and integrate systems more effectively",
    "homepage": "https://www.python.org/",
    "license": "Python-2.0",
    "notes": [
        "IMPORTANT: Python 3.4 reached end-of-life in March 2019 and has known security vulnerabilities.",
        "This version should only be used for legacy compatibility when absolutely necessary.",
        "Consider upgrading to a supported Python version (3.8+) for security and maintenance.",
        "",
        "To use Python 3.4 from command line:",
        "  python34     # Python 3.4 interpreter",
        "  pip34        # Package installer for Python 3.4",
        "",
        "Python 3.4 will be installed alongside other Python versions without conflicts."
    ],
    "architecture": {
        "64bit": {
            "url": "https://www.python.org/ftp/python/3.4.4/python-3.4.4.amd64.msi",
            "hash": "ace645d104bddd4f4ffbf453bedddaf2496e3609af3fa47173680d2f321d3709"
        },
        "32bit": {
            "url": "https://www.python.org/ftp/python/3.4.4/python-3.4.4.msi",
            "hash": "46c8f9f63cf02987e8bf23934b2f471e1868b24748c5bb551efcf4863b43ca6c"
        }
    },
    "installer": {
        "script": [
            "$programname = 'Python 3.4.4'",
            "$PythonPath = '$dir'.Replace('\\', '\\\\')",
            "$PythonExecutablePath = '$dir\\\\python.exe'.Replace('\\', '\\\\')",
            "$ScriptsPath = '$dir\\\\Scripts'.Replace('\\', '\\\\')",
            "$arguments = \"/i `\"$dir\\\\$(fname $url)\\\" /quiet InstallAllUsers=0 TargetDir=`\"$PythonPath`\" AssociateFiles=0 Shortcuts=0 Include_doc=0 Include_debug=0 Include_dev=1 Include_exe=1 Include_launcher=0 Include_lib=1 Include_pip=1 Include_symbols=0 Include_tcltk=1 Include_test=0 Include_tools=1\"",
            "Start-Process msiexec -Wait -ArgumentList $arguments -WindowStyle Hidden"
        ]
    },
    "post_install": [
        "# Create version-specific shortcuts to avoid conflicts",
        "if (Test-Path '$dir\\python.exe') {",
        "    New-Item -ItemType HardLink -Path '$dir\\python34.exe' -Target '$dir\\python.exe' -Force | Out-Null",
        "}",
        "if (Test-Path '$dir\\Scripts\\pip.exe') {",
        "    New-Item -ItemType HardLink -Path '$dir\\Scripts\\pip34.exe' -Target '$dir\\Scripts\\pip.exe' -Force | Out-Null",
        "}"
    ],
    "uninstaller": {
        "script": [
            "Start-Process msiexec -Wait -ArgumentList \"/x `\"$dir\\\\$(fname $url)\\\" /quiet\" -WindowStyle Hidden"
        ]
    },
    "bin": [
        [
            "python.exe",
            "python34"
        ],
        [
            "Scripts\\pip.exe",
            "pip34"
        ]
    ],
    "env_add_path": [
        ".",
        "Scripts"
    ],
    "persist": [
        "Lib\\site-packages"
    ]
}
