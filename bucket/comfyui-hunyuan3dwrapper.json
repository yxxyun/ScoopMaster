{
    "##": ["FIXME: 生成纹理的时候有一些报错还未解决"],
    "version": "0.0.1",
    "description": "comfyui custom node",
    "homepage": "https://github.com/kijai/ComfyUI-Hunyuan3DWrapper/",
    "license": "TENCENT HUNYUAN 3D 2.0 COMMUNITY LICENSE",
    "architecture": {
        "64bit": {
            "url": [
                "https://github.com/kijai/ComfyUI-Hunyuan3DWrapper/archive/refs/heads/main.zip"
            ]
        }
    },
    "depends": ["ChuckieChen945_Tangyuan/comfyui"],
    "extract_dir": ["ComfyUI-Hunyuan3DWrapper-main"],
    "installer": {
        "script": [
            "$current = Join-Path $(appdir comfyui $global) 'current'",
            "# ===create junction link",
            "$custom_nodes_path = Join-Path $current 'ComfyUI/custom_nodes'",
            "New-DirectoryJunction \"$custom_nodes_path\\$app\" \"$dir\"",
            "# ===pip install",
            "$python = Join-Path $current 'python312_embeded/Scripts/python.exe'",
            "& $python -m pip install -r \"$dir\\requirements.txt\"",
            "# === wheel",
            "& $python -m pip install \"$dir\\wheels\\custom_rasterizer-0.1.0+torch270.cuda128-cp312-cp312-win_amd64.whl\""
        ]
    }
}
