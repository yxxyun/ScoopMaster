            "$card_page = Invoke-RestMethod -Uri \"https://www.amd.com/en/support/downloads/drivers.html/graphics/radeon-600-500-400/radeon-rx-500-series/radeon-rx-580.html\"",
            "if ($card_page -match \"/en/resources/support-articles/release-notes/RN-RAD-WIN-[\\d-]+.html\") {",
            "    $release_notes_url = \"https://www.amd.com\" + $matches[0]",
            "}",
            "$release_notes = Invoke-RestMethod -Uri $release_notes_url",
            "if ($release_notes -match \"https://drivers.amd.com/drivers/whql-amd-software-adrenalin-edition-[\\d.]+-win10-win11-\\w+-rdna-combined.exe\") {",
            "    $matches[0]",
            "}"
        ],
        "regex": "(?<url>https://drivers.amd.com/drivers/whql-amd-software-adrenalin-edition-([\\d.]+)-win10-win11-\\w+-rdna-combined.exe)"
