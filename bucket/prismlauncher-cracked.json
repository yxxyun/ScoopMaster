{
    "version": "9.4",
    "description": "This project is a Fork of Prism Launcher, which aims to 'unblock' the use of Offline Accounts, disabling the restriction of having a functional Online Account. No other modifications were applied to the project's source code.",
    "homepage": "https://github.com/Diegiwg/PrismLauncher-Cracked",
    "license": "GPL-3.0-only",
    "notes": [
        "To add PrismLauncher-Cracked file association options for .ZIPs and .MRPACKS, run this: \"$dir\\install-associations.reg\"",
        "",
        "This package is now using the portable version of PrismLauncher-Cracked, and data should have been migrated automatically.",
        "If you have an existing PrismLauncher-Cracked installation, the data will be migrated from it.",
        "If you do not have an existing PrismLauncher-Cracked installation, but do have an existing Prism Launcher installation,",
        "the data will be migrated from the Prism Launcher installation.",
        "",
        "If there are any issues with migrating data from existing installations of PrismLauncher-Cracked or Prism Launcher,",
        "report them to https://github.com/TechPro424/scoop-bucket/issues",
        "If you are using a global install on a system with more than one user, you will need to copy a user's data from %appdata% to the new Scoop PrismLauncher-Cracked persist directory"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Diegiwg/PrismLauncher-Cracked/releases/download/9.4/PrismLauncher-Windows-MinGW-w64-Portable-9.4.zip",
            "hash": "3c26888356b9df41290f5a77e34239a2bd82432c76662ba0b3ba302007f6e402"
        }
    },
    "suggest": {
        "Microsoft Visual C++ Redistributables": "extras/vcredist2022"
    },
    "pre_install": [
        "$migration = $true",
        "$visibleUserAccounts = Get-LocalUser | Where-Object { $_.Enabled -eq $true }",
        "if ($global -and $visibleUserAccounts.Count -gt 1) { $migration = $false }",
        "",
        "$appdataPath",
        "$appdataPath1 = \"$HOME\\AppData\\Roaming\\PrismLauncher-Cracked\"",
        "$appdataPath2 = \"$HOME\\AppData\\Roaming\\PrismLauncher\"",
        "$appdataPath = '$appdataPath1', '$appdataPath2' | Where-Object { (Test-Path $_) -eq $true } | Select-Object -First 1",
        "if ((Test-Path -Path $appdataPath\\*) -and (!(Test-Path -Path $persist_dir\\*)) -and $migration) {",
        "    Write-Warning \"Migrating data from $appdataPath to $persist_dir (this may take a while)\"",
        "    New-Item -Type Directory -Path $persist_dir | Out-Null",
        "    Copy-Item -Recurse -Force $appdataPath\\* $persist_dir\\",
        "} elseif (!($migration)) {",
        "    Write-Warning \"A global Scoop installation was detected with multiple user accounts. Please see the notes at the end of the install process.\"",
        "}",
        ""
    ],
    "post_install": [
        "'install-associations', 'uninstall-associations' | ForEach-Object {",
        "    if (Test-Path \"$bucketsdir\\games\\scripts\\PrismLauncher-Cracked\\$_.reg\") {",
        "        $exePath = \"$dir\\prismlauncher.exe\".Replace('\\', '\\\\')",
        "        $content = (Get-Content \"$bucketsdir\\games\\scripts\\PrismLauncher-Cracked\\$_.reg\").Replace('$EXEPATH', $exePath)",
        "        if ($global) { $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE') }",
        "        Set-Content \"$dir\\$_.reg\" $content -Encoding Ascii -Force",
        "    }",
        "}"
    ],
    "bin": "pollymc.exe",
    "shortcuts": [
        [
            "prismlauncher.exe",
            "PrismLauncher-Cracked"
        ]
    ],
    "persist": [
        "assets",
        "cache",
        "icons",
        "instances",
        "libraries",
        "logs",
        "meta",
        "mods",
        "themes",
        "translations",
        "accounts.json",
        "metacache",
        "prismlauncher.cfg",
        "pollymc.cfg"
    ],
    "checkver": {
        "github": "https://github.com/Diegiwg/PrismLauncher-Cracked"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Diegiwg/PrismLauncher-Cracked/releases/download/$version/PrismLauncher-Windows-MinGW-w64-Portable-$version.zip"
            }
        }
    }
}
