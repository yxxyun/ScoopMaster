{
    "version": "2.1.7",
    "description": "An agentic coding tool that lives in your terminal",
    "homepage": "https://github.com/anthropics/claude-code",
    "license": "Proprietary",
    "suggest": {
        "git": "main/git"
    },
    "architecture": {
        "64bit": {
            "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/2.1.7/win32-x64/claude.exe",
            "hash": "1c8d7a246c8b44658860bfb45ef6901f7cff92b39a85e17a6af78ae069b4b67b"
        }
    },
    "bin": "claude.exe",
    "env_set": {
        "CLAUDE_CODE_GIT_BASH_PATH": "$env:GIT_INSTALL_ROOT\\bin\\bash.exe"
    },
    "post_install": [
        "$localBinDir = \"$env:USERPROFILE\\.local\\bin\"",
        "if (-not (Test-Path $localBinDir)) {",
        "    New-Item -ItemType Directory -Path $localBinDir -Force | Out-Null",
        "    Write-Host \"Created directory: $localBinDir\" -ForegroundColor Green",
        "}",
        "$symlinkPath = Join-Path $localBinDir 'claude.exe'",
        "if (Test-Path $symlinkPath) {",
        "    Remove-Item $symlinkPath -Force",
        "}",
        "New-Item -ItemType SymbolicLink -Path $symlinkPath -Target \"$dir\\claude.exe\" -Force | Out-Null",
        "Write-Host \"Created symlink: $symlinkPath -> $dir\\claude.exe\" -ForegroundColor Green"
    ],
    "post_uninstall": [
        "$symlinkPath = Join-Path \"$env:USERPROFILE\\.local\\bin\" 'claude.exe'",
        "if (Test-Path $symlinkPath) {",
        "    Remove-Item $symlinkPath -Force",
        "    Write-Host \"Removed symlink: $symlinkPath\" -ForegroundColor Yellow",
        "}"
    ],
    "notes": [
        "Claude Code has been installed and symlinked to ~/.local/bin/claude.exe",
        "",
        "Make sure ~/.local/bin is in your PATH:",
        "  $env:PATH += \";$env:USERPROFILE\\.local\\bin\"",
        "",
        "To make it permanent, add to your PowerShell profile:",
        "  notepad $PROFILE",
        "",
        "Usage:",
        "  claude [command]",
        "",
        "For help, run: claude --help"
    ],
    "checkver": {
        "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/latest",
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/$version/win32-x64/claude.exe"
            }
        },
        "hash": {
            "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/$version/manifest.json",
            "jsonpath": "$.platforms['win32-x64'].checksum"
        }
    }
}
