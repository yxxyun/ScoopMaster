{
    "version": "2026.01.1",
    "description": "图拉丁吧硬件检测工具箱，是开源、免费、绿色、纯净的硬件检测工具合集.",
    "homepage": "http://www.tbtool.cn/",
    "license": "Freeware",
    "depends": "innounp",
    "url": "https://apac.tualatin.club/%E5%9B%BE%E5%90%A7%E5%B7%A5%E5%85%B7%E7%AE%B1202601.1%E5%AE%89%E8%A3%85%E5%8C%85.exe",
    "hash": "255e663a0d45ac2b6b9c018e207afd9cd6b47c702180eebe3fcdb4a006b2bd57",
    "pre_install": [
        "$installer = Get-ChildItem \"$dir\\*.exe\" | Select-Object -First 1",
        "Invoke-ExternalCommand innounp -ArgumentList @('-x', '-b', '-y', \"-d$dir\", $installer.FullName) | Out-Null",
        "Remove-Item $installer.FullName -Force",
        "Get-ChildItem \"$dir\\{app}\\*\" | Move-Item -Destination $dir -Force",
        "Remove-Item \"$dir\\{app}\" -Force -Recurse -ErrorAction SilentlyContinue",
        "",
        "# Create initial config files",
        "if (!(Test-Path -Path \"$dir\\config.ini\")) {",
        "    (New-Item -ItemType \"file\" -Path \"$dir\" -Name \"config.ini\") | Out-Null",
        "}",
        "if (!(Test-Path -Path \"$dir\\hwinfo.ini\")) {",
        "    (New-Item -ItemType \"file\" -Path \"$dir\" -Name \"hwinfo.ini\") | Out-Null",
        "}",
        "if (!(Test-Path -Path \"$dir\\PnPDevice.ini\")) {",
        "    (New-Item -ItemType \"file\" -Path \"$dir\" -Name \"PnPDevice.ini\") | Out-Null",
        "}"
    ],
    "bin": [
        [
            "图吧工具箱2026.exe",
            "tbtool"
        ]
    ],
    "shortcuts": [
        [
            "图吧工具箱2026.exe",
            "图吧工具箱2026"
        ]
    ],
    "persist": [
        "config.ini",
        "hwinfo.ini",
        "PnPDevice.ini"
    ],
    "checkver": {
        "url": "https://www.tbtool.cn/",
        "regex": "软件版本 : ([\\d.]+)",
        "reverse": true
    },
