{
    "version": "1.9.0",
    "description": "Spout2 plugin for OBS Studio",
    "homepage":"https://knowledge.offworld.live/en/spout-plugin-for-obs-studio",
    "url":"https://github.com/Off-World-Live/obs-spout2-plugin/releases/download/1.10.0/win-spout-1.9.0-windows-x64.zip",
    "depands": {
        "OBS Studio":"obs-studio"
    },
    "post_install":[
        "New-Item -Value \"$dir\\win-spout\\data\" -Path \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\win-spout\" -ItemType Junction",
        "Get-ChildItem -Directory -Path \"$dir\\win-spout\\bin\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType Junction}",
        "Get-ChildItem -File -Path \"$dir\\win-spout\\bin\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType hardlink}"
    ],
    "pre_uninstall":[
        "Remove-Item \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\win-spout\" -recurse",
        "Get-ChildItem -Directory -Path \"$dir\\win-spout\\bin\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -recurse}",
        "Get-ChildItem -File -Path \"$dir\\win-spout\\bin\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\"}"
    ],
    "notes": [
        "Plugin installed to:",
        "  scoop\\persist\\obs-studio\\obs-plugins\\64bit\\win-spout"
    ]
}
