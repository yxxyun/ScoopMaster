{
    "version": "nightly",
    "description": "A quick way to manage your WSL instances with a GUI.",
    "homepage": "https://github.com/bostrot/wsl2-distro-manager",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://nightly.link/bostrot/wsl2-distro-manager/workflows/releaser/main/wsl2-distro-manager-nightly-archive.zip"
        }
    },
    "shortcuts": [
        [
            "wsl2distromanager.exe",
            "WSL Manager"
        ]
    ],
    "installer": {
        "script": [
            ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
            "New-PersistDirectory \"$env:APPDATA\\com.bostrot\" \"$persist_dir\\AppData\" -Migrate"
        ]
    },
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "Stop-App",
        "Remove-Junction \"$env:APPDATA\\com.bostrot\""
    ]
}
