{
    "version": "0.3.0",
    "homepage": "https://github.com/noris-plugins-for-obs/shutdown-plugin",
    "description": "Plugin for shutting down OBS Studio through websocket API",
    "license": "GPL-2.0",
    "notes": "If you don't have any obs-studio version installed in your computer, please install one of the following below. Then uninstall this app and install it again.",
    "suggest": {
        "OBS": [
            "extras/obs-studio",
            "extras/obs-studio-small",
            "versions/obs-studio-pre"
        ]
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/noris-plugins-for-obs/shutdown-plugin/releases/download/0.3.0/shutdown-plugin-0.3.0-obs31-Windows.zip",
            "hash": "8394071e8cd72f3cfa3c02027352dd6c866a325c7ded4283d1ba39864525bddd"
        }
    },
    "pre_install": [
        "'obs-studio', 'obs-studio-small', 'obs-studio-pre' | ForEach-Object {",
        "    $obs = \"$(appdir $_ $global)\"",
        "    if (Test-Path $obs) {",
        "       info \"Install for $_\"",
        "       Copy-Item \"$dir\\data\" \"$obs\\current\" -Recurse -ErrorAction SilentlyContinue",
        "       Copy-Item \"$dir\\obs-plugins\" \"$obs\\current\" -Recurse -ErrorAction SilentlyContinue",
        "   }",
        "}"
    ],
    "pre_uninstall": [
        "'obs-studio', 'obs-studio-small', 'obs-studio-pre' | ForEach-Object {",
        "    $obs = \"$(appdir $_ $global)\"",
        "    if (Test-Path $obs) {",
        "        info \"Uninstall for $_\"",
        "        Remove-Item \"$obs\\current\\data\\obs-plugins\\shutdown-plugin\" -Force -Recurse -ErrorAction SilentlyContinue",
        "        Remove-Item \"$obs\\current\\obs-plugins\\64bit\\shutdown-plugin.*\" -Force -ErrorAction SilentlyContinue",
        "    }",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/noris-plugins-for-obs/shutdown-plugin/releases/download/$version/shutdown-plugin-$version-obs31-Windows.zip"
            }
        }
    }
}
