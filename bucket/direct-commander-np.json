    "shortcuts": [
        [
            "Direct Commander.exe",
            "Direct Commander"
        ]
    ],
    "persist": "direct-commander",
    "checkver": {
        "url": "https://yandex.com/direct-commander/update/win32/$version/alpha/releases?id=direct-commander&localversion=$version&arch=amd64",
        "regex": "commander/v(\\d+\\.\\d+\\.\\d+)/"
