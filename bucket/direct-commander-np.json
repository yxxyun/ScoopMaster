    "extract_to": "setup",
    "pre_install": [
        "Expand-7zipArchive \"$dir\\setup\\direct-commander-$version-full.nupkg\" \"$dir\\setup\\direct-commander-$version-full\"",
        "Copy-Item \"$dir\\setup\\direct-commander-$version-full\\lib\\net45\\*\" \"$dir\" -Recurse",
