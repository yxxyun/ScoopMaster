{
    "version": "1.8.0",
    "description": "AionUi - Free, local, open-source Cowork for Gemini CLI, Claude Code, Codex, and more",
    "homepage": "https://github.com/iOfficeAI/AionUi",
    "license": "Apache-2.0",
    "notes": [
        "AionUi 是一个免费、本地、开源的 AI 协作工具",
        "用户数据目录：%APPDATA%\\AionUi\\",
        "本包会将该目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/iOfficeAI/AionUi/releases/download/v1.8.0/AionUi-1.8.0-win-x64.exe#/dl.7z",
            "hash": "16d8bcb2733b08f7e0385d6ca3c427b44104be7c5619567d25d9395da8d70e4d"
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal",
        "Remove-Item \"$dir\\`$*\" -Force -Recurse -ErrorAction SilentlyContinue"
    ],
    "bin": "AionUi.exe",
    "shortcuts": [
        [
            "AionUi.exe",
            "AionUi"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:APPDATA 'AionUi'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/iOfficeAI/AionUi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/iOfficeAI/AionUi/releases/download/v$version/AionUi-$version-win-x64.exe#/dl.7z"
            }
        }
    }
}
