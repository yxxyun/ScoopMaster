{
    "version": "0",
    "description": "Red Panda C++ is a lightweight yet powerful C/C++/GNU Assembly IDE.",
    "homepage": "http://royqh.net/redpandacpp/",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://nightly.link/royqh1979/RedPanda-CPP/actions/runs/11743319874/Windows%20MSVC%20x64.zip",
            "hash": "c3cee9f6e3eb6d11ce44595f0473c534692754ee8cefae82c9d101730fcf659a"
        }
    },
    "bin": [
        [
            "RedPandaIDE.exe",
            "redpanda-cpp"
        ]
    ],
    "shortcuts": [
        [
            "RedPandaIDE.exe",
            "RedPanda C++"
        ]
    ],
    "persist": "config",
    "checkver": {
        "script": [
            "$workflow_runs = (Invoke-WebRequest 'https://api.github.com/repositories/356104267/actions/workflows/build.yml/runs?branch=master&status=success' -UseBasicParsing | ConvertFrom-Json).workflow_runs[0]",
            "$artifacts_url = $workflow_runs.artifacts_url",
            "$artifacts = (Invoke-WebRequest $artifacts_url -UseBasicParsing | ConvertFrom-Json).artifacts",
            "$artifact = $artifacts | Where-Object { $_.name -eq 'Windows MSVC x64' }",
            "if ($artifact) {",
            "    $sha = $workflow_runs.head_sha",
            "    $version = $workflow_runs.id",
            "    Write-Output $version-$sha",
            "} else {",
            "    exit 1",
            "}"
        ],
        "regex": "(?<version>.+)-(?<sha>.+)",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nightly.link/royqh1979/RedPanda-CPP/actions/runs/$matchVersion/Windows%20MSVC%20x64.zip"
            }
        }
    }
}
