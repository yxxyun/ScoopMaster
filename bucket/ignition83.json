{
    "version": "8.3.0-rc1",
    "description": "Unlimited Platform for SCADA and so much more",
    "homepage": "https://inductiveautomation.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://inductiveautomation.com/ignition/license"
    },
    "url": "https://files.inductiveautomation.com/release/ia/8.3.0-rc1/20250826-1035/Ignition-windows-x86-64-8.3.0-rc1.zip",
    "hash": "337c62d7734be44dba24fd5eaba4de55b619c9bf585a3a975141fb4ab9aa0326",
    "pre_install": [
        "# Remove modules.json if it exists",
        "if (Test-Path -PathType Container \"$persist_dir\\data\\modules.json\") {",
        "    Remove-Item \"$persist_dir\\data\\modules.json\"",
        "}"
    ],
    "post_install": [
        "# Update ignition.conf",
        "(Get-Content \"$dir\\data\\ignition.conf\") -replace '=Ignition 8.3 scoop', '=Ignition' | Out-File \"$dir\\data\\ignition.conf\"",
        "(Get-Content \"$dir\\data\\ignition.conf\") -replace '=Ignition', '=Ignition 8.3 scoop' | Out-File \"$dir\\data\\ignition.conf\"",
        "# Install Ignition",
        "cmd.exe /c \"$dir\\install-ignition.bat\"",
        "# Run upgrader",
        "cmd.exe /c \"$dir\\run-upgrader.bat\"",
        "# Start Ignition",
        "cmd.exe /c \"$dir\\start-ignition.bat\""
    ],
    "uninstaller": {
        "script": [
            "# Stop Ignition if running",
            "cmd.exe /c \"$dir\\stop-ignition.bat\"",
            "# Uninstall Ignition",
            "cmd.exe /c \"$dir\\uninstall-ignition.bat\""
        ]
    },
    "bin": [
        [
            "start-ignition.bat",
            "start-ignition"
        ],
        [
            "stop-ignition.bat",
            "stop-ignition"
        ]
    ],
    "persist": [
        "data",
        "logs"
    ],
    "checkver": {
        "url": "https://inductiveautomation.com/downloads/",
        "regex": "(8.3.[\\d]+-(?:beta|rc)[\\d]+)"
    }
}
