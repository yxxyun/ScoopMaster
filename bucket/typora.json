    ],
    "pre_uninstall": [
        "$bucket = $install.bucket",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "A-Stop-Process",
        "A-Remove-LinkDirectory"
    ],
    "checkver": {
        "url": "https://typora.io/releases/stable",
        "regex": "<h2>([\\d\\.]+)"
    },
