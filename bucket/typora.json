    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$LinkPaths = @(\"$env:AppData\\Typora\")",
        "$LinkTargets = @(\"$persist_dir\\Typora\")",
