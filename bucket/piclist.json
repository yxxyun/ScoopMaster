{
    "version": "3.2.0",
    "description": "An image upload and manage tool, base on PicGo.",
    "homepage": "https://piclist.cn/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://release.piclist.cn/latest/PicList-Setup-3.2.0-x64.exe#/dl.7z",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
            "hash": "7c8f8b3231dcb21f3c0e2e041f0c97c4a37e610d0e672d6488486c8318deed10"
        },
        "32bit": {
            "url": "https://release.piclist.cn/latest/PicList-Setup-3.2.0-ia32.exe#/dl.7z",
            "pre_install": "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\"",
            "hash": "540660b4f20656b3293844feaab71a815ee6b21b709e072b6664451bb0560952"
        }
    },
    "persist": "data",
    "post_install": [
        "if (Test-Path $env:APPDATA\\piclist) {",
        "    Copy-Item -Path $env:APPDATA\\piclist\\* -Destination \"$persist_dir\\data\" -Force -Recurse",
        "    Remove-Item $env:APPDATA\\piclist -Force -Recurse",
        "}",
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\", \"$dir\\resources\\app-update.yml\"  -Force -Recurse",
        "New-Item -ItemType Junction -Path $env:APPDATA\\piclist -Target $persist_dir\\data | Out-Null"
    ],
    "bin": "PicList.exe",
    "shortcuts": [
        [
            "PicList.exe",
            "PicList"
        ]
    ],
    "checkver": {
        "github": "https://github.com/Kuingsmile/PicList"
    },
    "notes": "PicList is NOT portable.",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://release.piclist.cn/latest/PicList-Setup-$version-x64.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://release.piclist.cn/latest/PicList-Setup-$version-ia32.exe#/dl.7z"
            }
        }
    }
}
