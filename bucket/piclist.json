{
    "version": "3.2.2",
    "description": "PicList - 高效的云存储和图床平台管理工具，基于 PicGo 深度二次开发",
    "homepage": "https://piclist.cn",
    "license": "MIT",
    "notes": [
        "PicList 数据文件位置: %APPDATA%\\piclist",
        "插件目录: %APPDATA%\\piclist\\node_modules"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Kuingsmile/PicList/releases/download/v3.2.2/PicList-Setup-3.2.2-x64.exe#/dl.7z",
            "hash": "5048743289b3f718ad896a152ec03bba228eb86e2a08c09d98c011bcd36c940f"
        },
        "32bit": {
            "url": "https://github.com/Kuingsmile/PicList/releases/download/v3.2.2/PicList-Setup-3.2.2.exe#/dl.7z",
            "hash": "3877fc8d0c2b42da15754e00afc2108acaef1598b94cb5810c846859382f92cc"
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal",
        "Remove-Item \"$dir\\`$*\" -Force -Recurse -ErrorAction SilentlyContinue"
    ],
    "post_install": [
        "$source = Join-Path $env:APPDATA 'piclist'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    Move-Item -LiteralPath $source -Destination $backup -Force",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "bin": "PicList.exe",
    "shortcuts": [
        [
            "PicList.exe",
            "PicList"
        ]
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/Kuingsmile/PicList"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Kuingsmile/PicList/releases/download/v$version/PicList-Setup-$version-x64.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://github.com/Kuingsmile/PicList/releases/download/v$version/PicList-Setup-$version-ia32.exe#/dl.7z"
            }
        }
    }
}
