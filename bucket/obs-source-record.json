{
    "version": "0.4.6",
    "description": "Source Record plugin for OBS Studio",
    "homepage":"https://obsproject.com/forum/resources/source-record.1285/",
    "url":"https://obsproject.com/forum/resources/source-record.1285/version/6239/download?file=113212",
    "depends": "obs-studio",
    "post_install":[
        "Move-Item -Path \"$dir\\download\" \"$dir\\download.zip\"",
        "Expand-Archive -Path \"$dir\\download.zip\" -DestinationPath \"$dir\" -Force",
        "New-Item -Value \"$dir\\data\\obs-plugins\\source-record\" -Path \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\source-record\" -ItemType Junction",
        "Get-ChildItem -Directory -Path \"$dir\\obs-plugins\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType Junction}",
        "Get-ChildItem -File -Path \"$dir\\obs-plugins\\$architecture\" | ForEach-Object{New-Item -Value $_.FullName -Path \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -ItemType hardlink}"
    ],
    "pre_uninstall":[
        "Remove-Item \"$scoopdir\\persist\\obs-studio\\data\\obs-plugins\\source-record\" -recurse",
        "Get-ChildItem -Directory -Path \"$dir\\obs-plugins\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\" -recurse}",
        "Get-ChildItem -File -Path \"$dir\\obs-plugins\\$architecture\" | ForEach-Object{Remove-Item \"$scoopdir\\persist\\obs-studio\\obs-plugins\\$architecture\\$_\"}"
    ],
    "notes": [
        "Plugin installed to:",
        "  scoop\\persist\\obs-studio\\obs-plugins\\64bit\\source-record"
    ]
}
