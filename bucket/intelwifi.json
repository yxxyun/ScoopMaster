{
    "version": "24.10.0",
    "description": "intel wifi driver",
    "homepage": "https://www.intel.com/content/www/us/en/download/19351/intel-wireless-wi-fi-drivers-for-windows-10-and-windows-11.html",
    "license": "Proprietary",
    "url": "https://downloadmirror.intel.com/871690/BT-24.10.0-64UWD-Win10-Win11.exe#/setup.exe",
    "hash": "85290a3196cb87d9e24d92d28550e8409507e81a3ae122c829d798e9d22ec061",
    "depends": "curl",
    "installer": {
        "file": "setup.exe",
        "args": [
            "-q",
            "-s"
        ],
        "keep": true
    },
    "uninstaller": {
        "file": "setup.exe",
        "args": [
            "-q",
            "-s",
            "-uninstall"
        ]
    },
    "checkver": {
        "script": [
            "$src = 'https://www.intel.com/content/www/us/en/download/18649/intel-wireless-bluetooth-drivers-for-windows-10-and-windows-11.html'",
            "$html = curl -s $src",
            "$ver = [regex]::Matches($html, 'name=\"DownloadVersion\" content=\"(?<version>[\\d.]+)\"')",
            "$url = [regex]::Matches($html, 'download-button(.*)\"https://downloadmirror.intel.com/(?<url>.*exe)\"')",
            "[string]::Format('{0}|{1}', $ver[0].groups['version'].value, $url[0].groups['url'].value)"
        ],
        "regex": "(?<version>.+)\\|(?<url>.+)"
    },
    "autoupdate": {
        "url": "https://downloadmirror.intel.com/$matchUrl#/setup.exe"
    }
}
