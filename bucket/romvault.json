{
    "version": "3.7.0",
    "description": "Multi-DAT ROM management software",
    "homepage": "https://www.romvault.com/",
    "license": "Freeware",
    "url": "https://www.romvault.com/download/ROMVault_V3.7.0.zip",
    "hash": "3c887f15a83db25241063cd19522467ee26aa62fa9b47dbc76054b567d961307",
    "pre_install": [
        "Rename-Item $dir\\ROMVault37.exe ROMVault.exe",
        "'RomVault3cfg.xml', 'RomVault3_3.Cache', 'graphics.zip' | ForEach-Object {",
        "  if (!(Test-Path $persist_dir\\$_)) { New-Item $dir\\$_ | Out-Null } }"
    ],
    "shortcuts": [
        [
            "ROMVault.exe",
            "ROMVault"
        ]
    ],
    "persist": [
        "RomVault3cfg.xml",
        "RomVault3_3.Cache",
        "graphics.zip",
        "DATRoot",
        "ROMRoot",
        "ToSort"
    ],
    "checkver": {
        "regex": "RomVault V([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://www.romvault.com/download/ROMVault_V$version.zip"
    }
}
