{
    "##": "基于https://github.com/okibcn/ScoopMaster/blob/master/bucket/hmcl.json",
    "homepage": "https://github.com/huanghongxun/HMCL",
    "description": "HMCL 是一个免费、开源的 Minecraft 启动器，允许玩家方便快捷地安装、管理、运行游戏。",
    "license": "GPL-3.0-only",
    "version": "3.7.3",
    "url": "https://github.com/HMCL-dev/HMCL/releases/download/v3.7.3/HMCL-3.7.3.exe#/hmcl.exe",
    "hash": "9db698458dd7fb6c5c1848ebe3402b42911fd7ffff52d1619d8077fda6998837",
    "shortcuts": [
        [
            "hmcl.exe",
            "HMCL"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
        "Set-PersistFile -Name 'hmcl.json' -InitType Json"
    ],
    "persist": [
        "hmcl.json",
        ".minecraft"
    ],
    "installer": {
        "script": [
            ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
            "Set-Junction -Source \"$persist_dir\\HMCL\\.hmcl\" -Target \"$env:APPDATA\\.hmcl\""
        ]
    },
    "uninstaller": {
        "script": [
            ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
            "Remove-Junction -Path \"$env:APPDATA\\.hmcl\""
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/HMCL-dev/HMCL/releases/download/v$version/HMCL-3.7.3.exe#/hmcl.exe"
