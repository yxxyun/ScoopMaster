{
    "##": "基于https://github.com/okibcn/ScoopMaster/blob/master/bucket/hmcl.json",
    "homepage": "https://github.com/huanghongxun/HMCL",
    "description": "HMCL 是一个免费、开源的 Minecraft 启动器，允许玩家方便快捷地安装、管理、运行游戏。",
    "license": "GPL-3.0-only",
    "version": "3.9.1",
    "url": "https://github.com/HMCL-dev/HMCL/releases/download/v3.9.1/HMCL-3.9.1.exe#/hmcl.exe",
    "hash": "2483cb4a1e516ce254ce5a21bced352d38344c56ef4654efbcdcd796a21c466d",
    "shortcuts": [
        [
            "hmcl.exe",
            "HMCL"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
        "Set-PersistFile -Name 'hmcl.json' -InitType Json"
    ],
    "persist": [
        "hmcl.json",
        ".minecraft"
    ],
    "installer": {
        "script": [
            ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
            "Set-Junction -Source \"$persist_dir\\HMCL\\.hmcl\" -Target \"$env:APPDATA\\.hmcl\""
        ]
    },
    "uninstaller": {
        "script": [
            ". \"$bucketsdir\\doge\\scripts\\utils.ps1\"",
            "Remove-Junction -Path \"$env:APPDATA\\.hmcl\""
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/HMCL-dev/HMCL/releases/download/v$version/HMCL-$version.exe#/hmcl.exe"
    }
}
