{
    "version": "1.12.2b",
    "description": "Welcome to a calmer internet ",
    "homepage": "https://zen-browser.app/",
    "license": "MPL-2.0",
    "notes": [
        "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
        "  - Run 'Zen Profile Manager', choose 'Scoop' then click 'Start Zen'.",
        "  - Visit 'about:profiles' page in Zen to check *DEFAULT* profile.",
        "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.12.2b/zen.installer.exe#/dl.7z",
            "hash": "f65a68bf4152c8c5696be444bfa3773e95432a7dcda01564c5bc9a29eafca7d2"
        },
        "arm64": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.12.2b/zen.installer-arm64.exe#/dl.7z",
            "hash": "6b4f94af77807e2cad892f510dd6093e305b8c8c0d690d3ed1f9f1d99d4395c6"
        }
    },
    "extract_dir": "core",
    "post_install": [
        "zen -CreateProfile \"Scoop $persist_dir\\profile\"",
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}"
    ],
    "bin": "zen.exe",
    "shortcuts": [
        [
            "zen.exe",
            "Zen"
        ],
        [
            "private_browsing.exe",
            "Zen Private Browsing"
        ],
        [
            "zen.exe",
            "Zen Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://github.com/zen-browser/desktop/releases/latest",
        "regex": "/releases/tag/?([\\d.]+b)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer.exe#/dl.7z",
                "hash": {
                    "url": "https://github.com/zen-browser/desktop/releases/latest",
                    "regex": "$sha256\\s+zen.installer.exe"
                }
            },
            "arm64": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer-arm64.exe#/dl.7z",
                "hash": {
                    "url": "https://github.com/zen-browser/desktop/releases/latest",
                    "regex": "$sha256\\s+zen.installer-arm64.exe"
                }
            }
        }
    }
}
