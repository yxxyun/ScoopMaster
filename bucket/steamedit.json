{
    "version": "1.4.1",
    "description": "Tool for editing locally stored information about your game collection in Steam.",
    "homepage": "https://steamedit.tg-software.com/",
    "license": "Freeware",
    "url": "https://files.tg-software.com/steam_edit/release/1.4.1/SteamEdit.1.4.1.zip",
    "hash": "b6f03b29f3e42f90d573a84f3c6b4ff812e3bf89898f68930f666c7beab877dc",
    "pre_install": [
        "If (!(Test-Path \"$persist_dir\\Settings.xml\")) {",
        "  New-Item \"$dir\\Settings.xml\" -ItemType File | Out-Null",
        "  \"<?xml version=`\"1.0`\" encoding=`\"utf-8`\"?>`r`n<Settings>`r`n  <EnableAutoUpdate>False</EnableAutoUpdate>`r`n</Settings>\" | Out-File -File \"$dir\\Settings.xml\" -Encoding utf8BOM",
        "}",
        "If (Test-Path \"$persist_dir\\mods.dat\") {",
        "  Copy-Item -Path \"$persist_dir\\mods.dat\" -Destination \"$dir\\mods.dat\" -Force",
        "}"
    ],
    "bin": [
        [
            "SteamEdit.exe",
            "steamedit"
        ]
    ],
    "shortcuts": [
        [
            "SteamEdit.exe",
            "SteamEdit"
        ]
    ],
    "persist": "Settings.xml",
    "pre_uninstall": [
        "If (Test-Path \"$dir\\mods.dat\") {",
        "  Copy-Item -Path \"$dir\\mods.dat\" -Destination \"$persist_dir\\mods.dat\" -Force",
        "}"
    ],
    "checkver": {
        "url": "https://steamedit.tg-software.com/",
        "regex": "<a.+>Download\\ v([\\d.]+)\\!<\\/a>"
    },
    "autoupdate": {
        "url": "https://files.tg-software.com/steam_edit/release/$version/SteamEdit.$version.zip"
    }
}
