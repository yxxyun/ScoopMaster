{
    "version": "1.43.44.0",
    "description": " Quicker 您的指尖工具箱 操作更少，收获更多！ ",
    "homepage": "https://getquicker.net",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://getquicker.net/download/item/fast_x64#/quiker.msi",
            "hash": "a6be08ebe2fc214174167de927792b7d29e3448c40376e532d1673a1336faa58"
        },
        "32bit": {
            "url": "https://getquicker.net/download/item/fast_x86#/quiker.msi",
            "hash": "21994b662c8d4a7138796c4417a6e7b971c110d330e7d41420b32bb5e8fe7f14"
        }
    },
    "extract_dir": "Quicker",
    "shortcuts": [
        [
            "Quicker.exe",
            "Quicker"
        ]
    ],
    "pre_install": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match 'Scoop-Store'})[0].Name",
        "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name $bucket) scripts/AirUtils.psm1)",
        "RedirectDirectory \"$env:LOCALAPPDATA\\Quicker\" \"$persist_dir\\Local\\Quicker\"",
        "RedirectDirectory \"$env:USERPROFILE\\Documents\\Quicker\" \"$persist_dir\\Documents\\Quicker\"",
        "Remove-Module -Name AirUtils"
    ],
    "installer": {
        "script": [
          "if (!(is_admin)) {",
          "    error \"Administrator rights are required to uninstall $app.\"",
          "    exit 1",
          "}",
          "New-Item Registry::HKEY_CLASSES_ROOT\\quicker -Force -ItemType String -Value 'URL:Quicker Protocol' | Out-Null",
          "New-ItemProperty Registry::HKEY_CLASSES_ROOT\\quicker -Force -PropertyType string -Name 'URL Protocol' -Value '' | Out-Null",
          "New-Item Registry::HKEY_CLASSES_ROOT\\quicker\\DefaultIcon -Force -ItemType String -Value 'Quicker.exe' | Out-Null",
          "New-Item Registry::HKEY_CLASSES_ROOT\\quicker\\shell\\open\\command -Force -ItemType String -Value \"`\"$dir\\QuickerStarter.exe`\" `\"%1`\"\" | Out-Null"
        ]
    },
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match 'Scoop-Store'})[0].Name",
        ". \"$bucketsdir\\$bucket\\scripts\\utils.ps1\"",
        "stop_process"
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall') {",
            "    $bucket=(scoop bucket list | where-Object { $_.Source -match 'Scoop-Store'})[0].Name",
            "    Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name $bucket) scripts/AirUtils.psm1)",
            "    RemoveJunction \"$env:USERPROFILE\\Documents\\Quicker\"",
            "    RemoveJunction \"$env:LOCALAPPDATA\\Quicker\"",
            "    Remove-Module -Name AirUtils",
            "}",
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "if (Test-Path Registry::HKEY_CLASSES_ROOT\\quicker) {",
            "    Remove-Item Registry::HKEY_CLASSES_ROOT\\quicker -Force -Recurse | Out-Null",
            "}"
        ]
    },
    "checkver": {
        "url": "https://getquicker.net/open/api/quicker/versionhistory",
        "jsonpath": "$[0].version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://getquicker.net/download/item/fast_x64#/quiker.msi"
            },
            "32bit": {
                "url": "https://getquicker.net/download/item/fast_x86#/quiker.msi"
            }
        }
    }
}
